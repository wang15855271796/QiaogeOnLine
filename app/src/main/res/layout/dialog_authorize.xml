<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#999999"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:text="请输入授权码"
                android:textColor="#232131"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/size_20dp"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ic_huo_close" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_authprize"
            android:hint="请输入授权码"
            android:background="@null"
            android:textColorHint="#4D3C3C43"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linPsd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/size_36dp"
            android:layout_marginRight="@dimen/size_36dp"
            android:layout_below="@+id/edit_login_password"
            android:layout_marginTop="@dimen/size_5dp"
            android:background="#EFEFEF"
            android:orientation="vertical" />

        <TextView
            android:text="获取授权码"
            android:id="@+id/tv_get"
            android:background="@drawable/shape_orange13"
            android:textSize="@dimen/sp_14"
            android:textColor="#FF5C00"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/size_70dp"
            android:paddingRight="@dimen/size_70dp"
            android:layout_marginTop="@dimen/size_26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_sure"
            android:text="      确定      "
            android:background="@drawable/shape_jianbian"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/size_70dp"
            android:paddingLeft="@dimen/size_70dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
