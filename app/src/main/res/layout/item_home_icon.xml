<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_62dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/size_6dp"
    android:layout_marginTop="@dimen/size_3dp"
    android:layout_height="@dimen/size_60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="海鲜会员"
                android:textColor="@color/color_252525"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:maxLength="5"
            android:paddingLeft="@dimen/size_3dp"
            android:paddingTop="@dimen/size_1dp"
            android:paddingRight="@dimen/size_3dp"
            android:paddingBottom="@dimen/size_1dp"
            tools:text="新鲜新鲜新鲜"
            android:textColor="#ffffff"
            android:textSize="9sp" />
    </RelativeLayout>


</LinearLayout>