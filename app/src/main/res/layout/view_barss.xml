                    android:background="@null"
                    android:textColor="#0A0204"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:gravity="center_horizontal"
                    android:text="新品上市"/>

                <RadioButton
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="#0A0204"
                    android:textSize="@dimen/sp_14"
