<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <com.puyue.www.qiaoge.view.CompatToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/app_border_bottom_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="取消订单"
                android:textColor="@color/app_top_bar_text"
                android:textSize="16dp" />

        </RelativeLayout>

    </com.puyue.www.qiaoge.view.CompatToolbar>

    <!--  理由1  -->
    <LinearLayout
        android:id="@+id/ll_box1"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_reason"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp">

            <TextView
                android:text="原因"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_reason1"
                tools:text="原因"
                android:drawablePadding="@dimen/size_5dp"
                android:textColor="#999999"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="#EAEAEA"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_0.5"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_reason1"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp">

            <TextView
                android:text="子原因"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_reason2"
                tools:text="原因"
                android:drawablePadding="@dimen/size_5dp"
                android:textColor="#999999"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消该笔订单"
            android:textColor="#ffffff"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:layout_marginRight="@dimen/size_37dp"
            android:layout_marginLeft="@dimen/size_37dp"
            android:layout_marginTop="@dimen/size_50dp"
            android:background="@drawable/shape_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_back"
            android:text="返回订单详情"
            android:textColor="#FF5C00"
            android:padding="@dimen/dp_10"
            android:drawablePadding="@dimen/size_3dp"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@mipmap/qg_cart_jump"
            android:layout_marginRight="@dimen/size_37dp"
            android:layout_marginLeft="@dimen/size_37dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--  理由2  -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_box2"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_reason"
            android:background="@drawable/shape_white1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <EditText
                android:id="@+id/et_reason"
                android:layout_marginTop="@dimen/sp_12"
                android:layout_marginLeft="@dimen/sp_12"
                android:hint="取消原因描述（150以内）"
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:text="确认"
            android:textColor="#ffffff"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:layout_marginRight="@dimen/size_37dp"
            android:layout_marginLeft="@dimen/size_37dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:background="@drawable/shape_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>