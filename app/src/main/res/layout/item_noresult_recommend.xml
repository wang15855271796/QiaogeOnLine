<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp">



                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        />


                    <ImageView
                        android:id="@+id/iv_no_data"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/size_45dp"
                        android:layout_height="@dimen/size_20dp"/>

                    <ImageView
                        android:id="@+id/iv_send"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/icon_not_send2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热狗香肠真棒热狗香肠"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/rl"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="销量：300"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#666"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_operate"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_below="@+id/rl_prices"
                    tools:src="@mipmap/icon_operate"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="@dimen/size_12dp" />

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_operate"
                    android:layout_below="@+id/rl_prices"
                    tools:src="@mipmap/icon_operate"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="@dimen/size_12dp" />

                <RelativeLayout
                    android:id="@+id/rl_prices"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_below="@+id/tv_sale"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="￥100.00—￥100.00"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#FF703C"
                        android:textSize="13sp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_price_desc"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格授权后可见"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#FF703C"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_spec"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:background="@drawable/shape_orange_radius_11"
                        android:layout_width="@dimen/size_52dp"
                        android:layout_height="@dimen/size_26dp">

                        <TextView
                            android:id="@+id/tv_choose_spec"
                            android:text="选规格"
                            android:textColor="#fff"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:textSize="@dimen/size_11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_price"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:background="@drawable/shape_orange_radius_11"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_26dp">

                        <TextView
                            android:text="获取授权"
                            android:textColor="#fff"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:textSize="@dimen/size_12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <!--次日达 隔日送图标-->

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_style"
                    android:textColor="#999999"
                    android:text="展开全部规则"
                    android:drawablePadding="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textSize="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_25dp"/>

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/tv_style"
                    android:src="@mipmap/icon_arrow_light_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="规格："
                    android:id="@+id/tv1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.puyue.www.qiaoge.activity.flow.TagFlowLayout
                    android:id="@+id/rv_spec"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="160dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    app:is_limit="true"
                    app:tag_gravity="right"
                    app:limit_line_count="1"
                    app:max_select="1"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>