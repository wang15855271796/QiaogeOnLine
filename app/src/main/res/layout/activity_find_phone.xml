<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_jianbian4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_56dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back_arrow" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_65dp"
                android:src="@mipmap/icon_point" />

            <TextView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_17dp"
                android:layout_marginTop="53dp"
                android:background="@mipmap/icon_desc"
                android:gravity="center"
                android:paddingBottom="@dimen/size_2dp"
                android:text="翘歌"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_62dp"
                android:text="找回密码"
                android:textColor="#000000"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_20dp"
                android:src="@mipmap/icon_wave" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_21dp"
            android:layout_marginTop="@dimen/size_68dp"
            android:layout_marginRight="@dimen/size_21dp"
            android:background="@null"
            android:drawablePadding="@dimen/size_15dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/size_22dp"
            android:textColor="#000000"
            android:textColorHint="@color/color_CACACB"
            android:textSize="@dimen/size_14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_26dp"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@mipmap/ic_tanhao"
            android:drawablePadding="@dimen/size_3dp"
            android:text="请填写你要找回密码的手机号！"
            android:textColor="#FF5A30" />

        <TextView
            android:id="@+id/tv_next"
            android:alpha="0.6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_21dp"
            android:layout_marginTop="@dimen/size_25dp"
            android:layout_marginRight="@dimen/size_21dp"
            android:background="@drawable/shape_jianbian5"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
