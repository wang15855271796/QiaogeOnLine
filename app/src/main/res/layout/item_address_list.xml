<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="95dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_default"
                android:text="默认"
                android:visibility="gone"
                android:textColor="#FF5C00"
                android:padding="@dimen/public_space_value_1"
                android:background="@drawable/shape_orange15"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/ysf_text_size_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_default"
                android:textColor="#333333"
                android:textSize="@dimen/size_15dp"
                android:textStyle="bold"
                tools:text="杭州翘歌网络科技有限公司" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp" >

            <TextView
                android:id="@+id/tv_address"
                android:lines="1"
                android:textSize="@dimen/sp_12"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_16dp"
                tools:text="这里写的是客户店铺的详细地址，详细的地址" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_choose"
                android:src="@mipmap/icon_gous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="5dp"
                tools:text="桃子" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="5dp"
                tools:text="18757104843"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>