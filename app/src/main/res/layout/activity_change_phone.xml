<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/shape_jianbian4"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_56dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back_arrow" />

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_50dp"
                android:src="@mipmap/icon_point" />

            <TextView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_17dp"
                android:layout_marginTop="53dp"
                android:background="@mipmap/icon_desc"
                android:gravity="center"
                android:paddingBottom="@dimen/size_2dp"
                android:text="翘歌"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_62dp"
                android:text="请输入常用收货人及电话"
                android:textColor="#000000"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_81dp"
                android:src="@mipmap/icon_wave" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_21dp"
        android:layout_marginTop="@dimen/size_57dp"
        android:layout_marginRight="@dimen/size_21dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginLeft="@dimen/size_22dp"
            android:background="@null"
            android:hint="请输入新手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#000000"
            android:textColorHint="#D5D5D5"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginLeft="@dimen/size_21dp"
        android:layout_below="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/size_22dp"
            android:textColor="#000000"
            android:textColorHint="#D5D5D5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_22dp"
            android:paddingTop="@dimen/size_11dp"
            android:paddingRight="@dimen/size_22dp"
            android:paddingBottom="@dimen/size_11dp"
            android:text="获取验证码"
            android:textColor="#FF3E20"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/size_21dp"
        android:layout_marginRight="@dimen/size_21dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_jianbian5"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />

</LinearLayout>
