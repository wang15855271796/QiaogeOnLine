<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tl:tabIndicatorColor="#ffffff"
            tl:tl_indicator_margin_bottom="10dp"
            tl:tl_indicator_width="18dp"
            tl:tl_textAllCaps="true"
            tl:tabMode="scrollable"
            app:tl_tab_space_equal="true"
            tl:tl_textBold="BOTH"
            tl:tabIndicatorHeight="@dimen/dp_4"
            tl:tabTextColor="#ffffff"
            tl:tl_textSelectColor="#ffffff"
            tl:tl_textUnselectColor="#ffffff"
            tl:tl_textsize="@dimen/size_16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.puyue.www.qiaoge.view.WrapContentHeightViewPager
                        android:id="@+id/viewPager"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_white5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/iv_pre"
                        android:layout_centerVertical="true"
                        android:src="@drawable/huo_left"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:layout_width="@dimen/size_30dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/iv_next"
                        android:padding="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/huo_right"
                        android:layout_width="@dimen/size_30dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/shape_white6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_desc"
                            android:text="附加要求:"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#333333"
                            android:layout_marginLeft="@dimen/size_17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_17dp"
                            android:src="@mipmap/icon_zhuang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_zhuang"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:hint="请输入装货地址"
                            android:textColor="#333333"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/size_14dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:background="@drawable/shape_grey4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_17dp"
                            android:src="@mipmap/icon_xie" />

                        <TextView
                            android:id="@+id/tv_unload"
                            android:gravity="center"
                            android:hint="请输入卸货地址"
                            android:textColor="#333333"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/size_14dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:text="200"
                            android:textColor="#333333"
                            android:textSize="@dimen/size_30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="元"
                            android:drawablePadding="@dimen/size_5dp"
                            android:textColor="#333333"
                            android:drawableRight="@mipmap/rightarrow"
                            android:textSize="@dimen/size_18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/size_20dp"
                        android:layout_marginRight="@dimen/size_12dp"
                        android:layout_marginLeft="@dimen/size_12dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48dp">

                        <TextView
                            android:id="@+id/tv_now"
                            android:text="现在用车"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_16"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:background="@drawable/shape_orange3"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/tv_appoint"
                            android:text="预约"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_16"
                            android:background="@drawable/shape_orange8"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>




    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/lav_loading"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallPulseIndicator"
        style="@style/AVLoadingIndicatorView.Large"
        app:indicatorColor="#f40"
        />
</RelativeLayout>