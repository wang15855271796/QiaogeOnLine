<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_marginRight="@dimen/size_12dp"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/size_18dp"
                tools:text="翘歌五一大促优惠券" />

            <TextView
                android:id="@+id/tv_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:textColor="#FF2925"
                android:textSize="@dimen/sp_12"
                tools:text="翘歌优惠券" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_below="@+id/tv_factor"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                tools:text="有效期至 2020-12-3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_money"
                    android:text="￥"
                    android:textColor="#E1003F"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv"
                    android:textColor="#E1003F"
                    android:textSize="@dimen/size_25dp"
                    android:textStyle="bold"
                    tools:text="25" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_centerHorizontal="true"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                tools:text="无门槛" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_red4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#FF2925"
            tools:text="12" />
    </RelativeLayout>

</LinearLayout>