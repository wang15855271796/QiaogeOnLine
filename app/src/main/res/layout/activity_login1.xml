<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_jianbian4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_56dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back_arrow" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_65dp"
                android:src="@mipmap/icon_point" />

            <TextView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_17dp"
                android:layout_marginTop="53dp"
                android:background="@mipmap/icon_desc"
                android:gravity="center"
                android:paddingBottom="@dimen/size_2dp"
                android:text="翘歌"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_62dp"
                android:text="欢迎回来"
                android:textColor="#000000"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_20dp"
                android:src="@mipmap/icon_wave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_pink3"
                android:padding="5dp"
                android:text="物美价廉，尽在翘歌"
                android:textColor="#FF3B00"
                android:textSize="11sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_login_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_21dp"
            android:layout_marginTop="@dimen/size_68dp"
            android:layout_marginRight="@dimen/size_21dp"
            android:background="@null"
            android:drawablePadding="@dimen/size_15dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/size_22dp"
            android:textColor="#000000"
            android:textColorHint="@color/color_CACACB"
            android:textSize="@dimen/size_14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp">

            <EditText
                android:id="@+id/edit_login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_marginLeft="@dimen/size_21dp"
                android:layout_marginRight="@dimen/size_21dp"
                android:background="@null"
                android:drawablePadding="@dimen/size_15dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/size_22dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/color_CACACB"
                android:textSize="@dimen/size_14dp" />

            <TextView
                android:id="@+id/tv_yzm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_42dp"
                android:gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="#FF3E20"

                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_25dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:background="@drawable/shape_jianbian5"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_xieyi"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_register"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/app_checkbox_style"
            android:button="@null" />

        <!--《翘歌用户注册协议》-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="已详细阅读并同意"
            android:textColor="@color/color_CACACB"
            android:textSize="@dimen/size_11dp" />

        <TextView
            android:id="@+id/tv_register_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《翘歌用户注册协议》"
            android:textColor="#FF3000"
            android:textSize="@dimen/size_11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="与"
            android:textColor="@color/color_CACACB"
            android:textSize="@dimen/size_11dp" />

        <TextView
            android:id="@+id/tv_register_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="#FF3000"
            android:textSize="@dimen/size_11dp" />

    </LinearLayout>

</RelativeLayout>
