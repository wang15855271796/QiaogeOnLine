<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_self_sufficiency"
    android:layout_marginTop="-10dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutAddressHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:src="@mipmap/ic_icon_address"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_activity_order_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:layout_toLeftOf="@+id/changeAddress"
                    android:layout_toRightOf="@+id/ImageView"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:drawableLeft="@mipmap/iv_self_small"
                        android:drawablePadding="@dimen/size_5dp"
                        android:text="自提点"
                        android:textColor="#FE5630"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_14dp"
                        android:src="@mipmap/iv_line" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/icon_address_orange"
                        android:drawablePadding="@dimen/size_5dp"
                        android:gravity="left"
                        android:text="翘歌余杭区终端仓库"
                        android:textColor="#414141"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:gravity="left"
                        android:text="杭州市余杭区仁和街道栅庄桥魏家塘20-3号"
                        android:textColor="#FF6B6B6B"
                        android:textSize="10sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:background="@drawable/deliver_map_order_bg"
                        android:orientation="vertical">

                        <fragment
                            android:id="@+id/frag"
                            class="com.tencent.tencentmap.mapsdk.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="160dp" />

                        <TextView
                            android:id="@+id/tv_dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="200dp"
                            android:background="@drawable/shape_jianbian7"
                            android:paddingLeft="@dimen/size_8dp"
                            android:paddingTop="@dimen/size_3dp"
                            android:paddingRight="@dimen/size_8dp"
                            android:paddingBottom="@dimen/size_3dp"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            tools:text="距您100" />

                        <com.tencent.tencentmap.mapsdk.map.MapView
                            android:id="@+id/bmapView"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/LinearLayoutStoreName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/storeName"
                            android:textColor="@color/app_black"
                            android:textSize="@dimen/size_11dp" />

                        <TextView
                            android:id="@+id/firmName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:paddingRight="37dp"
                            android:textColor="@color/app_black"
                            android:textSize="@dimen/size_11dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货人"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/size_18dp" />

                            <TextView
                                android:id="@+id/userPhone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:gravity="left"
                                android:text="收货人手机号"
                                android:textColor="#FF333333"
                                android:textSize="@dimen/size_18dp" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/changeAddress"
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_25dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:src="@mipmap/ic_address_icon_new"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提货人"
                android:textColor="#FF999999"
                android:textSize="@dimen/size_13dp" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="自提手机号"
                android:textColor="#FF999999"
                android:textSize="@dimen/size_13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/size_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/size_13dp" />

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_order_arrow_deliver" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"

                    android:text=""
                    android:textColor="#FF333333"
                    android:textSize="@dimen/size_13dp" />

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_order_arrow_deliver" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:padding="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提货时间"
            android:textColor="#414141"
            android:textSize="@dimen/size_13dp" />

<!--        <TextView-->
<!--            android:id="@+id/et_time"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/size_36dp"-->
<!--            android:layout_toRightOf="@+id/tv_three"-->
<!--            android:background="@null"-->
<!--            android:text="请选择提货时间"-->
<!--            android:textColor="#858585"-->
<!--            android:textSize="@dimen/size_13dp" />-->

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_alignParentRight="true"
            android:textColor="#858585"
            android:textSize="@dimen/size_13dp" />

        <TextView
            android:textSize="10sp"
            android:layout_below="@+id/tv_three"
            android:textColor="#FD552E"
            android:layout_marginTop="@dimen/size_3dp"
            android:text="温馨提示：仓库不提供储服务，超过自提时间需要退货重新下单，请及时提货哦!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>