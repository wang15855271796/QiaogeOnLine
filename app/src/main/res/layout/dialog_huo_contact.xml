<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:background="@drawable/shape_choose_address"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_62dp"
            >

            <TextView
                android:text="下单联系人"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginTop="@dimen/size_12dp"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_close_black" />

        </RelativeLayout>

        <TextView
            android:textColor="#FD6601"
            android:layout_marginLeft="@dimen/size_24dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="*司机将优先联系此人确认订单信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <EditText
            android:id="@+id/et_name"
            android:hint="请输入姓名"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_13dp"
            android:layout_marginRight="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:background="@drawable/shape_grey4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:hint="请输入手机号码"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginTop="@dimen/size_13dp"
            android:layout_marginRight="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:background="@drawable/shape_grey4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_marginTop="@dimen/size_40dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:text="确定"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/shape_orange2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"/>

    </LinearLayout>

</LinearLayout>