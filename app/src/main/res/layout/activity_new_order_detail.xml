    <ScrollView
        android:layout_marginTop="-10dp"
        android:background="@drawable/shape_grey15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_distribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/shape_white1">

                    <TextView
                        android:id="@+id/tv_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="配送服务"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_distribution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FE5630"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:layout_toLeftOf="@+id/tv_call"
                            android:textSize="@dimen/sp_12"
                            tools:text="配送配送配送" />

                        <TextView
                            android:id="@+id/tv_call"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_jianbian10"
                            android:paddingLeft="@dimen/size_5dp"
                            android:paddingTop="@dimen/size_3dp"
                            android:paddingRight="@dimen/size_5dp"
                            android:paddingBottom="@dimen/size_3dp"
                            android:text="呼叫货拉拉"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="配对中>"
                            android:textColor="#ffffff"
                            android:paddingLeft="@dimen/size_5dp"
                            android:paddingRight="@dimen/size_5dp"
                            android:paddingBottom="@dimen/size_3dp"
                            android:paddingTop="@dimen/size_3dp"
                            android:background="@drawable/shape_jianbian10"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_hll_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_dis"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_jianbian26"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/tv_hll_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="关联配送订单"
                            android:textColor="#FE5630"
                            android:textSize="@dimen/sp_14" />

                        <com.puyue.www.qiaoge.activity.flow.TagFlowLayout
                            android:id="@+id/rv_huo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_hll_order"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            app:is_limit="true"
                            app:limit_line_count="3"
                            app:max_select="3"
                            app:tag_gravity="right" />


                        <TextView
                            android:id="@+id/tv_order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_dis"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:text="查看全部17个关联订单>"
                            android:textSize="11sp"
                            android:visibility="gone" />
                    </RelativeLayout>

