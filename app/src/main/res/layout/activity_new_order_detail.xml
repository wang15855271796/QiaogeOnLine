                android:textColor="#FFFFFF"
                android:paddingRight="@dimen/size_15dp"
                android:paddingLeft="@dimen/size_15dp"
                android:paddingBottom="@dimen/size_7dp"
                android:paddingTop="@dimen/size_7dp"
                android:background="@drawable/shape_white9"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="确认收货"
                android:id="@+id/tv_confirm_order"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="@dimen/size_15dp"
                android:paddingRight="@dimen/size_15dp"
                android:paddingLeft="@dimen/size_15dp"
                android:paddingBottom="@dimen/size_7dp"
                android:paddingTop="@dimen/size_7dp"
                android:background="@drawable/shape_white9"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="复制订单"
                android:id="@+id/copy_order"
                android:textColor="#FF2A00"
                android:paddingRight="@dimen/size_15dp"
                android:paddingLeft="@dimen/size_15dp"
                android:paddingBottom="@dimen/size_7dp"
                android:paddingTop="@dimen/size_7dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:background="@drawable/shape_white"
                android:layout_width="wrap_content"
