<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginRight="@dimen/size_38dp"
        android:layout_marginLeft="@dimen/size_38dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:background="@mipmap/bg_huo_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_tip"
            android:text="温馨提示"
            android:padding="@dimen/size_10dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginTop="139dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/size_22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#666666"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_tip"
            android:id="@+id/tv_content"
            android:gravity="center_horizontal"
            android:text="您有6笔货拉拉配送订单已取消，建议\n
取消关联的2笔货拉拉订单，以免造成\n不必要的经济损失"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_deal"
            android:textColor="#ffffff"
            android:background="@drawable/shape_orange"
            android:layout_centerHorizontal="true"
            android:text="去处理"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginRight="@dimen/size_36dp"
            android:layout_marginLeft="@dimen/size_36dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_38dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/iv_close_inform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>