<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_city_warehouse"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_marginRight="@dimen/size_22dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_back_arrow"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_33dp"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:text="开店合作"
                    android:textColor="#414141"
                    android:textSize="16sp" />

            </RelativeLayout>

            <ImageView
                android:src="@mipmap/ic_city_warehouse_info_large"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="各地区发展城市合伙人，平台提供运营支持，城市合伙人自主经营，部分同渠道产品实行总仓集中式采购与分拨，逐步实现成本最低化。"
                android:textColor="#414141"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/shape_city_warehouse"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textColor="#414141"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_grey4"
                        android:hint="请输入联系人姓名"
                        android:paddingLeft="5dp"
                        android:textColor="#414141"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="联系电话"
                        android:textColor="#414141"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_grey4"
                        android:hint="请输入联系电话"
                        android:paddingLeft="5dp"
                        android:textColor="#414141"
                        android:textSize="13sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="意向城市"
                        android:textColor="#414141"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_grey4"
                        android:hint="请输入意向城市（限50个字）"
                        android:paddingLeft="5dp"
                        android:maxLength="50"
                        android:gravity="top"
                        android:padding="3dp"
                        android:textColor="#414141"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:text="城市仓入驻信息填写"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ic_city_bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@mipmap/ic_city_bt2"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>




</LinearLayout>