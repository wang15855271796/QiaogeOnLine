<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/shape_jianbian4"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_56dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back_arrow" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_65dp"
                android:src="@mipmap/icon_point" />

            <TextView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_17dp"
                android:layout_marginTop="53dp"
                android:background="@mipmap/icon_desc"
                android:gravity="center"
                android:paddingBottom="@dimen/size_2dp"
                android:text="翘歌"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_62dp"
                android:text="请设置登录密码"
                android:textColor="#000000"
                android:textSize="28sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:src="@mipmap/icon_wave" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_21dp"
        android:layout_marginTop="@dimen/size_57dp"
        android:layout_marginRight="@dimen/size_21dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_login"
            android:paddingLeft="@dimen/size_22dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:background="@null"
            android:hint="请输入6-16位字母或数字的密码"
            android:inputType="textEmailAddress"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="#949494"
            android:textColorHint="@color/color_CACACB"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_22dp"
            android:padding="@dimen/size_5dp"
            android:src="@mipmap/icon_eye_close" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_21dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_21dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_login_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textEmailAddress"
            android:maxLength="16"
            android:paddingLeft="@dimen/size_22dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="@color/color_CACACB"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_close_sure"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_22dp"
            android:padding="@dimen/size_5dp"
            android:src="@mipmap/icon_eye_close" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/size_21dp"
        android:layout_marginRight="@dimen/size_21dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_jianbian5"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />

</LinearLayout>