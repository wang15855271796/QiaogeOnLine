<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_buy_tips"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            tools:text="(此商品请在明日（6月26日）00:00~23:00进行结算)"
            android:textColor="#FE5630"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_item_out"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:background="@drawable/app_equipment_all_select"
                android:button="@null"
                android:checked="true" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/size_19dp"
                android:layout_toRightOf="@+id/cb_item_out"
                android:id="@+id/ll_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.puyue.www.qiaoge.RoundImageView
                    android:id="@+id/iv_head"
                    android:src="@mipmap/ic_launcher"
                    android:layout_toRightOf="@+id/cb_item_cart"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="@dimen/sp_12"
                    android:layout_toRightOf="@+id/iv_head"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="【妙可蓝多】精致马苏里里苏里里苏奶马苏里奶"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_operate"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="@dimen/sp_12"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@+id/iv_head"
                    tools:src="@mipmap/icon_operate" />

                <ImageView
                    tools:src="@mipmap/icon_operate"
                    android:id="@+id/iv_icon"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@+id/tv_title"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginTop="35dp"
                    android:layout_width="28dp"
                    android:layout_height="12dp" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp">

            <CheckBox
                android:id="@+id/cb_spec"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:checked="true"
                android:layout_marginTop="@dimen/size_7dp"
                android:background="@drawable/app_equipment_all_select"
                android:button="@null" />

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_toRightOf="@+id/cb_spec"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="15"
                android:text="规格"
                android:textColor="#414141"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_send"
                android:layout_toRightOf="@+id/tv_spec"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_7dp"
                android:src="@mipmap/icon_not_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_price"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/cart_item_bg"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="删除"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp" />
</LinearLayout>