<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_marginTop="@dimen/size_8dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_like"
            android:text="猜你喜欢"
            android:drawableLeft="@mipmap/ic_like"
            android:padding="@dimen/dp_10"
            android:drawablePadding="5dp"
            android:textSize="@dimen/size_14dp"
            android:layout_marginLeft="@dimen/size_5dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_14dp"
            android:src="@mipmap/ic_left_open" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/tv_like"
            android:id="@+id/recyclerViewRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp">

        <View
            android:id="@+id/v1"
            android:layout_centerVertical="true"
            android:background="#CBCBCB"
            android:layout_toLeftOf="@+id/tv1"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/size_17dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textSize="@dimen/size_14dp"
            android:textColor="#B5B5B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/v1"
            android:background="#CBCBCB"
            android:layout_toRightOf="@+id/tv1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/size_17dp"
            android:layout_height="1dp"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>