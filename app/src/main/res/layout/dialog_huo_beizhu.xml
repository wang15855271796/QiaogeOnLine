<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:background="@drawable/shape_choose_address"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_62dp"
            >

            <TextView
                android:text="订单备注"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginTop="@dimen/size_12dp"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_close_black" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_desc"
            android:gravity="top|left"
            android:maxLength="150"
            android:hint="请输入备注（如货物类别等）"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_13dp"
            android:layout_marginRight="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:background="@drawable/shape_grey4"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <RelativeLayout
            android:paddingRight="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_24dp"
            android:background="@drawable/shape_grey4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">

            <TextView
                android:layout_marginRight="@dimen/size_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:id="@+id/tv_num"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="/150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_marginTop="@dimen/size_40dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:text="确定"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/shape_orange2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"/>

    </LinearLayout>

</LinearLayout>