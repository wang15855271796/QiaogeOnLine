<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/shape_white4">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_18dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:padding="5dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="资质信息"
            android:textColor="#414141"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="3dp"
                    android:drawableLeft="@mipmap/ic_auth_card"
                    android:text="营业执照"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.puyue.www.qiaoge.RoundImageView
                        android:id="@+id/iv_business"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_shop_camera" />

                    <TextView
                        android:id="@+id/tv_upload"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_grey18"
                        android:gravity="center"
                        android:text="重新上传"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_business"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_up_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:drawableTop="@mipmap/ic_shop_camera1"
                        android:drawablePadding="5dp"
                        android:text="上传图片" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_red15"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="需文字清晰无水印"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="3dp"
                    android:text="注册号/统一信用代码"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_register_num"
                    tools:text="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#414141"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_grey4"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:drawablePadding="3dp"
                    android:text="单位名称"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_company_name"
                    tools:text="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#414141"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_grey4"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:drawablePadding="3dp"
                    android:text="经营场所"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_place_business"
                    tools:text="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#414141"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_grey4"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:drawablePadding="3dp"
                    android:text="公司类型"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/rg_style"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rb_personal"
                        android:text="个体工商户（主体类型一般为个体户、个体工商户、个体经营）"
                        android:layout_weight="0.5"
                        android:textColor="#414141"
                        android:textSize="13sp"
                        android:button="@null"
                        android:padding="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_5dp"
                        android:drawableLeft="@drawable/check_status_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <RadioButton
                        android:id="@+id/rb_company"
                        android:text="企业（主体类型一般为有限公司、有限责任公司）"
                        android:layout_weight="1.5"
                        android:textColor="#414141"
                        android:textSize="13sp"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:padding="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_5dp"
                        android:drawableLeft="@drawable/check_status_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>

                <TextView
                    android:layout_marginTop="20dp"
                    android:drawablePadding="3dp"
                    android:text="执照有效期"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_regular"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="3dp"
                        android:text="固定有效期"
                        android:background="@drawable/shape_grey3"
                        android:textColor="#414141"
                        android:textSize="13sp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_long_term"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="3dp"
                        android:text="长期有效"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_grey3"
                        android:textColor="#414141"
                        android:textSize="13sp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:drawablePadding="3dp"
                        android:text="有效日期"
                        android:textColor="#414141"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:hint="起止时间"
                            android:textColor="#414141"
                            android:background="@drawable/shape_grey4"
                            android:gravity="center_vertical"
                            android:layout_height="33dp"/>

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:text="至"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="#414141"
                            android:gravity="center_vertical"
                            android:layout_height="33dp"/>

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:hint="结束时间"
                            android:paddingLeft="10dp"
                            android:textColor="#414141"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:background="@drawable/shape_grey4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="33dp"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_jianbian5"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="确认图片与信息一致"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>