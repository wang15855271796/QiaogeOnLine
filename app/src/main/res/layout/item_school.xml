<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/size_12dp"
        android:id="@+id/rl_group"
        android:layout_marginLeft="@dimen/size_12dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white1"
        android:layout_width="wrap_content"
        android:layout_height="280dp">

        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="wrap_content"
            android:layout_height="171dp">

            <com.puyue.www.qiaoge.view.RoundImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_emptys" />

            <TextView
                android:id="@+id/tv_player_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@mipmap/icon_player_tip"
                android:drawablePadding="@dimen/size_3dp"
                android:padding="@dimen/size_2dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="播放量:10000"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="崇贤上亿官场二层真香集排破产了，低价转让了"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="地址：浙江省杭州市"
            android:textColor="#AEAEAE"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_desc"
            android:layout_below="@+id/tv_desc"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">

            <TextView
                android:textColor="#777777"
                android:id="@+id/tv_time"
                android:textSize="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="13dp"
                android:text="2020.12.10发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>