<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheelSurfView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!--<ImageView-->
    <!--android:id="@+id/iv_bg"-->

    <!--android:layout_centerInParent="true"-->
    <!--android:layout_width="410dp"-->
    <!--android:layout_height="410dp" />-->

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="-65dp"
            android:layout_below="@+id/wheelSurfView"
            android:src="@mipmap/icon_yuan_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.puyue.www.qiaoge.WheelSurfView
            android:id="@+id/wheelSurfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            wheelSurfView:typenum="-1"
            android:layout_margin="20dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_chose"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/iv_close_inform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>