<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_12dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:background="@drawable/shape_f9f9f9"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp">


            <ImageView
                android:id="@+id/iv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/size_11dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_status_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_toRightOf="@+id/iv_style"
                android:background="@drawable/shape_orange12"
                android:padding="1dp"
                android:text="运送中"
                android:textColor="#FE7559"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6dp"
                android:layout_toRightOf="@+id/tv_status_name"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="sdsds" />



            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15dp"
                android:textColor="#FE5630"
                android:textSize="@dimen/size_12dp"
                tools:text="代付款" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_15dp">

            <TextView
                android:id="@+id/tv_time"
                android:text="2020.10.1"
                android:textSize="9sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="#868686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_sub_account"
                tools:text="185757135363"
                android:textSize="9sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5dp"
                android:textColor="#868686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

