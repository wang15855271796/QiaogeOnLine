        <!-- 图片展示-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/commodityOne"
                    android:layout_width="@dimen/size_46dp"
                    android:layout_height="@dimen/size_46dp"
                    android:background="@drawable/app_my_wallet_bg"
                    android:scaleType="fitXY" />



                <ImageView
                    android:id="@+id/commodityTwo"
                    android:layout_width="@dimen/size_46dp"
                    android:layout_height="@dimen/size_46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/app_my_wallet_bg"
                    android:scaleType="fitXY" />


                <ImageView
                    android:id="@+id/commodityThree"
                    android:layout_width="@dimen/size_46dp"
                    android:layout_height="@dimen/size_46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/app_my_wallet_bg"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/commodityFour"
                    android:layout_width="@dimen/size_46dp"
                    android:layout_height="@dimen/size_46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/app_my_wallet_bg"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/commodityMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@mipmap/ic_ellipsis" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_25dp">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_11dp"
                android:text="3件商品"
                android:textColor="#414141"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv1"
                android:textColor="#414141"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_total"
                android:layout_marginLeft="@dimen/size_5dp"
                android:text="合计"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/tv1"
                android:layout_centerVertical="true"
                android:id="@+id/tv_item_my_order_all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_15dp"
                android:textColor="#F56E24"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_5dp"
                android:textSize="12sp"
                tools:text="500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_order"
                android:text="代下单"
                android:textColor="#306AFE"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_order"
                android:text="代支付"
                android:textColor="#306AFE"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="102dp"
                android:src="@mipmap/ic_cancel_order"
                android:visibility="gone" />

            <TextView
                android:id="@+id/evaluateNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="102dp"
                android:background="@drawable/shape_order_list"
                android:paddingLeft="@dimen/size_11dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_11dp"
                android:paddingBottom="@dimen/size_6dp"
                android:text="立即评价"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_confirm_order"
                android:background="@drawable/shape_order_list"
                android:paddingLeft="@dimen/size_11dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_11dp"
                android:paddingBottom="@dimen/size_6dp"
                android:text="呼叫货拉拉"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/imageGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/size_15dp"
                android:text="立即付款"
                android:textColor="#ffffff"
                android:background="@drawable/shape_order_list"
                android:paddingLeft="@dimen/size_11dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_11dp"
                android:paddingBottom="@dimen/size_6dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/againBay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:background="@drawable/shape_order_list"
                android:paddingLeft="@dimen/size_11dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_11dp"
                android:paddingBottom="@dimen/size_6dp"
                android:text="再次购买"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_delete_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="195dp"
                android:background="@drawable/shape_order_red"
                android:paddingLeft="@dimen/size_11dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_11dp"
                android:paddingBottom="@dimen/size_6dp"
                android:text="删除订单"
                android:textColor="#FE5630"
                android:visibility="gone" />

            <TextView
                android:visibility="gone"
                android:paddingLeft="@dimen/size_11dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_11dp"
                android:paddingBottom="@dimen/size_6dp"
                android:textColor="#ffffff"
                android:id="@+id/tv_confirm_order"
                android:layout_width="wrap_content"
                android:background="@drawable/shape_order_list"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/againBay"
                android:layout_marginTop="5dp"
                android:text="确认收货" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>