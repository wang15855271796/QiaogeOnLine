<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/size_7dp"
        android:id="@+id/ll_group"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="15dp">

                <com.puyue.www.qiaoge.RoundImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="@dimen/public_space_value_80"
                    android:layout_height="@dimen/public_space_value_80"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:src="@mipmap/icon_not_send2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_sale_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/size_12dp"
                android:layout_toRightOf="@+id/rl"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="热狗香肠真棒热狗香肠"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginTop="@dimen/size_2dp"
                android:layout_marginRight="@dimen/sp_12"
                android:layout_toRightOf="@+id/rl"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666"
                android:textSize="10sp"
                tools:text="规格：300g/500g/800g" />

            <TextView
                android:id="@+id/tv_stock_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_spec"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_toLeftOf="@+id/iv_close"
                android:layout_toRightOf="@+id/rl"
                android:textColor="#666"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="库存：300" />

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_stock_total"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_toLeftOf="@+id/iv_close"
                android:layout_toRightOf="@+id/rl"
                android:textColor="#666"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="销售:300" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sale"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_toRightOf="@+id/rl">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#FFFF5C00"
                    android:textSize="@dimen/size_18dp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sale"
                    android:layout_toRightOf="@+id/rl"
                    android:text="价格授权后可见"
                    android:textColor="#FFFF5C00"
                    android:textSize="@dimen/size_16dp"
                    android:visibility="gone" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_style"
                android:layout_width="@dimen/size_38dp"
                android:layout_height="@dimen/size_16dp"
                android:layout_below="@+id/ll"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_toRightOf="@+id/rl"
                tools:src="@mipmap/icon_after_next" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_add"
            android:text="立即加购"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_jianbian10"
            android:gravity="center"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_57dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_57dp"
            android:layout_height="@dimen/size_22dp" />

    </RelativeLayout>
</LinearLayout>