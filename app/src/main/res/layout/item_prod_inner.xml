<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="160dp">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/iv_pic"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/size_82dp"
            android:layout_height="@dimen/size_82dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_pic"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="翘歌玉米蔬菜猪..."
            android:textColor="#676767"
            android:textSize="9sp" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_name"
            android:textSize="9sp"
            android:id="@+id/tv_sale"
            android:textColor="#676767"
            android:text="销量：30000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_sale"
            android:id="@+id/tv_price"
            android:textSize="11sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#FF680A"
            tools:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/iv_operate"
            android:layout_marginLeft="@dimen/size_13dp"
            android:layout_below="@+id/tv_price"
            android:src="@mipmap/icon_operate"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_14dp"/>

        <RelativeLayout
            android:id="@+id/rl_send"
            android:visibility="visible"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_60dp">

            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/iv_send"
                android:src="@mipmap/icon_not_send2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>