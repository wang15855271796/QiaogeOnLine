<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_marginBottom="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_back_arrow" />

                <TextView
                    android:text="发布信息"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/app_top_bar_text"
                    android:textSize="18dp" />


            </RelativeLayout>

            <LinearLayout
                android:background="@drawable/shape_orange20"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="@dimen/size_14dp"
                android:layout_marginLeft="@dimen/size_14dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp">

                <TextView
                    android:textColor="#FF4C00"
                    android:layout_gravity="center_vertical"
                    android:textSize="10sp"
                    android:text="为了提高审核通过率，请保证图片真实有效，不要上传二维码类的图片！"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_14dp"
                android:layout_marginRight="@dimen/size_14dp"
                android:layout_marginLeft="@dimen/size_14dp"
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:layout_marginRight="@dimen/size_14dp"
                    android:layout_marginLeft="@dimen/size_14dp"
                    android:gravity="top"
                    android:background="#ffffff"
                    android:hint="详细的描述将会有更多的人来联系你的哦\n\n
1.描述下您的店面优势，如靠近**商圈\n
2.描述下您的店铺面积，如138㎡\n
3.描述您是做什么餐饮的；如“快餐”\n
4.描述下是否带器具转让哦"
                    android:lineSpacingExtra="1.5dp"
                    android:padding="10dp"
                    android:textColor="#232131"
                    android:textColorHint="@color/color_E5E5E5"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_marginTop="@dimen/size_35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传凭证"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_12" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="@dimen/size_14dp"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />

            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/size_7dp"
                android:layout_marginRight="@dimen/size_14dp"
                android:layout_marginLeft="@dimen/size_14dp"
                android:background="@drawable/shape_white1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_18dp"
                        android:text="消息类型："
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_message_style"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_60dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_18dp"
                        android:drawableRight="@mipmap/ic_address_icon"
                        android:drawablePadding="@dimen/size_5dp"
                        android:gravity="center_vertical"
                        android:text="请选择消息类型"
                        android:textColor="#414141"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_48dp"
                    android:layout_below="@+id/rl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_48dp"
                        android:layout_marginLeft="@dimen/size_18dp"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLength="11"
                        android:text="手机号码："
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />


                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_18dp"
                        android:background="@null"
                        android:gravity="right"
                        android:paddingTop="@dimen/size_5dp"
                        android:paddingBottom="@dimen/size_5dp"
                        android:layout_centerVertical="true"
                        android:hint="请输入手机号码"
                        android:textColor="#414141"
                        android:textColorHint="#B4B4B4"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48dp"
                    android:layout_below="@+id/rl1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_48dp"
                        android:layout_marginLeft="@dimen/size_18dp"
                        android:gravity="center_vertical"
                        android:text="发布位置："
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/size_5dp"
                        android:layout_marginRight="@dimen/size_18dp"
                        android:drawableLeft="@mipmap/ic_address_red"
                        android:padding="@dimen/size_5dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_below="@+id/rl3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_48dp"
                        android:layout_marginLeft="@dimen/size_18dp"
                        android:gravity="center_vertical"
                        android:text="详细地址："
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/size_18dp"
                        android:layout_marginRight="@dimen/size_18dp"
                        android:background="@null"
                        android:gravity="right"
                        android:paddingTop="@dimen/size_5dp"
                        android:paddingBottom="@dimen/size_5dp"
                        android:layout_centerVertical="true"
                        android:hint="请输入详细地址"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="#414141"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>


<!--                <TextView-->
<!--                    android:textColor="#FF1601"-->
<!--                    android:layout_marginBottom="60dp"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_alignParentBottom="true"-->
<!--                    android:text="当前收费0.5元/条，若审核未通过将退回"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->


            </RelativeLayout>


<!--            <TextView-->
<!--                android:layout_marginTop="@dimen/size_34dp"-->
<!--                android:id="@+id/tv_money"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/rl2"-->
<!--                android:layout_marginLeft="@dimen/size_18dp"-->
<!--                android:layout_marginRight="@dimen/size_18dp"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:text="当前收费0.5元/条，若审核未通过将退回"-->
<!--                android:textColor="#FF1601"/>-->

            <TextView
                android:id="@+id/tv_sure"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2"
                android:layout_marginLeft="@dimen/size_18dp"
                android:layout_marginRight="@dimen/size_18dp"
                android:layout_marginBottom="@dimen/size_45dp"
                android:background="@drawable/shape_jianbian5"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/size_14dp"
                android:paddingBottom="@dimen/size_14dp"
                android:text="确认发表"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>