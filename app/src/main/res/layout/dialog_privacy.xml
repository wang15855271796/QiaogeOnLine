<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:gravity="center_horizontal"
            android:text="翘歌隐私政策"
            android:textColor="#333333"
            android:textSize="18sp" />

        <WebView
            android:id="@+id/webView"
            android:layout_marginLeft="@dimen/size_15dp"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_width="match_parent"
            android:layout_height="265dp">

        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:button="@null"
                android:background="@drawable/select_checkbox"
                android:layout_width="@dimen/size_16dp"
                android:layout_height="@dimen/size_16dp" />

            <TextView
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已经阅读"
                android:textColor="#ff858585"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《翘歌隐私政策》"
                android:textColor="#F56D23"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="(5s)"
                android:textColor="#F56D23"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:background="@drawable/shape_white1"
        android:padding="8dp"
        android:layout_margin="@dimen/size_20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="温馨提示"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:textSize="@dimen/size_22dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lineSpacingExtra="5dp"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="感谢您对翘歌一直以来的信任！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content"
            android:textSize="@dimen/sp_14"
            android:text="我们依据最新的监管要求更新了《翘歌隐私权政策》，特向您说明如下"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/sp_14"
            android:text="1、为向您提供交易相关基本功能，我们会收集、使用必要的信息；"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="2、基于您的明示授权，我们可能会获取您的位置（为您提供附近的商品、店铺及优惠资讯等）等信息，您有权拒绝或取消授权；"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="3、我们会采取业界先进的安全措施保护您的信息安全；"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="4、未经您同意，我们不会从第三方处获取、共享或向其提供您的信息；"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="5、您可以查询、更正、删除您的个人信息，我们也提供账户注销的渠道。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/size_20dp"
            android:id="@+id/ll_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="@drawable/shape_orange"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:text="同意"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size_13dp"
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:text="不同意"
                android:textColor="#666666"
                android:textSize="@dimen/size_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>