<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_white1"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp">

                <com.puyue.www.qiaoge.RoundImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="@dimen/size_91dp"
                    android:layout_height="@dimen/size_91dp"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_emptys" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@+id/iv_pic"
                    android:background="@drawable/shape_jianbian8"
                    android:paddingLeft="@dimen/size_7dp"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/size_7dp"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="店铺转让"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_toEndOf="@+id/iv_pic"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_toRightOf="@+id/iv_pic"
                    android:paddingBottom="5dp"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_10"
                    tools:text="2020.10.2" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="5dp"
                    android:text="1586人看过"
                    android:textColor="#FF5C00"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:src="@mipmap/ic_verify" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_marginRight="@dimen/size_12dp"
                android:background="@drawable/app_my_info" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp"
            android:layout_below="@+id/rl">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_toRightOf="@+id/iv_status"
                android:text="信息已审核通过"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_toRightOf="@+id/tv_status"
                android:background="@drawable/shape_orange14"
                android:paddingLeft="@dimen/size_6dp"
                android:paddingTop="@dimen/size_3dp"
                android:paddingRight="@dimen/size_6dp"
                android:paddingBottom="@dimen/size_3dp"
                android:text="查看原因"
                android:textColor="#FF4424"
                android:textSize="8sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_toRightOf="@+id/tv_status"
                android:background="@drawable/shape_grey11"
                android:paddingLeft="@dimen/size_6dp"
                android:paddingTop="@dimen/size_3dp"
                android:paddingRight="@dimen/size_6dp"
                android:paddingBottom="@dimen/size_3dp"
                android:text="已删除"
                android:textColor="#414141"
                android:textSize="8sp" />


            <TextView
                android:id="@+id/tv_deleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/ll_change"
                android:drawableLeft="@mipmap/iv_delete1"
                android:drawablePadding="@dimen/size_3dp"
                android:paddingLeft="@dimen/size_5dp"
                android:paddingTop="@dimen/size_3dp"
                android:paddingRight="@dimen/size_5dp"
                android:paddingBottom="@dimen/size_3dp"
                android:text="删除"
                android:textColor="#414141" />

            <LinearLayout
                android:id="@+id/ll_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/size_3dp"
                android:drawableLeft="@mipmap/icon_edit"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingRight="@dimen/size_5dp"
                    android:drawablePadding="@dimen/size_3dp"
                    android:drawableLeft="@mipmap/iv_edit1"
                    android:paddingBottom="@dimen/size_3dp"
                    android:text="编辑"
                    android:textColor="#414141" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_look"
                    android:drawablePadding="@dimen/size_3dp"
                    android:drawableLeft="@mipmap/iv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingRight="@dimen/size_5dp"
                    android:paddingBottom="@dimen/size_3dp"
                    android:text="查看"
                    android:textColor="#414141" />
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>