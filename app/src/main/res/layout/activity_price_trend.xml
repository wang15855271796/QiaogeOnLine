<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"/>

    <com.puyue.www.qiaoge.view.CompatToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_border_bottom_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:text="价格趋势"
            android:textColor="#232131"
            android:textSize="18dp" />

    </com.puyue.www.qiaoge.view.CompatToolbar>

    <LinearLayout
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp">

            <TextView
                android:text="商品名称"
                android:layout_marginLeft="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_title"
                android:text="商品名称"
                android:layout_marginLeft="@dimen/size_90dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F2F3F6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_0.5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp">

            <TextView
                android:text="规格"
                android:layout_marginLeft="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_spec"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/size_60dp"
                android:text="首次上架日期首次上架日期首次上架日期首次上架日期首次上架日期首次上架日期"
                android:layout_marginRight="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F2F3F6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_0.5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp">

            <TextView
                android:text="首次上架日期"
                android:layout_marginLeft="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_date"
                android:text="商品名称"
                android:layout_marginRight="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F2F3F6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_0.5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp">

            <TextView
                android:text="当前售价"
                android:layout_marginLeft="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_price"
                android:text="商品名称"
                android:layout_marginRight="@dimen/size_13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF2925"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:layout_marginLeft="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_17dp"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:text="价格走势图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/tv1"
            android:layout_marginLeft="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:textSize="@dimen/dp_10"
            android:textColor="#666666"
            android:text="展示商品价格涨跌幅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.puyue.www.qiaoge.view.FundView
            android:id="@+id/fund"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv1"
            android:layout_marginRight="@dimen/sp_16"
            android:layout_marginLeft="@dimen/sp_16"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <TextView
            android:padding="5dp"
            android:background="@drawable/shape_orange6"
            android:id="@+id/tv_desc"
            android:text="哈喽哈喽"
            android:visibility="gone"
            android:layout_marginRight="@dimen/size_16dp"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableLeft="@mipmap/icon_ups"
            android:textColor="#FF2925"
            android:layout_marginTop="@dimen/size_50dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="5dp"
            android:visibility="gone"
            android:background="@drawable/shape_orange7"
            android:id="@+id/tv_desc1"
            android:text="哈喽哈喽"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableLeft="@mipmap/icon_downs"
            android:textColor="#3B930A"
            android:layout_marginTop="@dimen/size_50dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/fund"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/sp_16"
            android:layout_marginLeft="@dimen/sp_16"
            android:id="@+id/recyclerView"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>