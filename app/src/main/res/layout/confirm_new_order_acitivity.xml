<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@drawable/shape_jianbian16"
        android:layout_width="match_parent"
        android:layout_height="168dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_22dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="订单确认"
            android:textStyle="bold"
            android:textColor="#414141"
            android:textSize="16sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_left">

                <TextView
                    android:id="@+id/tv_deliver_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="订单配送"
                    android:textColor="#FB4800"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sufficiency_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="到仓自提"
                    android:textColor="#000000" />

            </LinearLayout>

            <FrameLayout
                android:layout_below="@+id/ll_bg"
                android:id="@+id/fr_confirm_oder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="免运费"
                android:layout_marginTop="5dp"
                android:textSize="9sp"
                android:textColor="#ffffff"
                android:padding="@dimen/size_1dp"
                android:background="@drawable/shape_jianbian5"
                android:layout_marginRight="@dimen/size_38dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>