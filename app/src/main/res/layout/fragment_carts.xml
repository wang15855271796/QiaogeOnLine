<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:id="@+id/ll_cart_order"
                android:background="@drawable/shape_jianbian6"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/size_33dp"
                        android:layout_height="@dimen/size_6dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_50dp"
                        android:background="@drawable/shape_orange25" />

                    <TextView
                        android:id="@+id/tv_cart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_36dp"
                        android:text="购物车"
                        android:textColor="#414141"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/size_40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="#414141"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_scroll"
                    android:layout_below="@+id/rl"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_12dp"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:background="@drawable/shape_white1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">

                    <RelativeLayout
                        android:id="@+id/rl_reduce"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/size_40dp">

                        <TextView
                            android:id="@+id/tv_reduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:drawableLeft="@mipmap/ic_reduce"
                            android:drawableRight="@mipmap/fenlei_rigth_huangse"
                            android:drawablePadding="@dimen/size_5dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="#FF3F12"
                            tools:text="系统维护停服升级公告系统维护停服升级公告" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_given"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/size_40dp">

                        <TextView
                            android:id="@+id/tv_given"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:drawableLeft="@mipmap/ic_given"
                            android:drawableRight="@mipmap/fenlei_rigth_huangse"
                            android:drawablePadding="@dimen/size_5dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="#FF3F12"
                            tools:text="系统维护停服升级公告系统维护停服升级公告" />


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="-70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--列表-->
                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/smart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.scwang.smartrefresh.header.MaterialHeader
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/nestedScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_cart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_12dp"
                                android:layout_marginTop="@dimen/size_12dp"
                                android:layout_marginRight="@dimen/size_12dp" />

                            <!--失效列表-->
                            <LinearLayout
                                android:id="@+id/ll_unList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@drawable/shape_white1"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginBottom="15dp"
                                        android:text="已失效商品"
                                        android:textColor="@color/color_555555"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/tv_clear"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:padding="10dp"
                                        android:text="清空"
                                        android:textColor="@color/color_F6551A"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                                <com.puyue.www.qiaoge.activity.flow.TagFlowLayout
                                    android:id="@+id/rv_invalid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_clear"
                                    app:is_limit="true"
                                    app:limit_line_count="2"
                                    app:max_select="1" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rv_unable"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/size_12dp"
                                android:layout_marginBottom="12dp"
                                android:drawableRight="@mipmap/icon_open"
                                android:drawablePadding="@dimen/dp_10"
                                android:text="展开全部失效商品"
                                android:textColor="#F56E24"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <!--空界面-->
                            <LinearLayout
                                android:id="@+id/ll_NoData"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_marginRight="@dimen/size_10dp"
                                android:background="@drawable/shape_white1"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_37dp"
                                    android:drawableTop="@mipmap/ic_no_datas"
                                    android:drawablePadding="@dimen/size_15dp"
                                    android:gravity="center"
                                    android:text="今日宜补货~ "
                                    android:textColor="#FF4901"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_buy"
                                    android:layout_width="@dimen/size_100dp"
                                    android:layout_height="@dimen/size_33dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/size_15dp"
                                    android:background="@drawable/shape_jianbian5"
                                    android:gravity="center"
                                    android:text="去逛逛"
                                    android:textColor="#ffffff" />
                            </LinearLayout>

                            <!--推荐列表-->
                            <RelativeLayout
                                android:id="@+id/rl_recommend"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_marginTop="@dimen/size_20dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="@dimen/size_17dp"
                                    android:layout_height="@dimen/size_1dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/size_6dp"
                                    android:layout_toLeftOf="@+id/tv_recommend"
                                    android:background="#CBCBCB" />

                                <TextView
                                    android:id="@+id/tv_recommend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:drawableLeft="@mipmap/ic_recommend"
                                    android:drawablePadding="3dp"
                                    android:src="@mipmap/icon_recommend"
                                    android:text="为你推荐"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="@dimen/size_17dp"
                                    android:layout_height="@dimen/size_1dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_6dp"
                                    android:layout_toRightOf="@+id/tv_recommend"
                                    android:background="#CBCBCB" />

                            </RelativeLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_recommend"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_10dp" />

                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--去凑单-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_jianbian13"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:text="还差"
                        android:textSize="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_price_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="12dp"
                        tools:text="1000"
                        android:textColor="#FFF6551A"
                        android:textSize="12dp" />

                    <TextView
                        android:text="即可免费享受送货上门服务"
                        android:textSize="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_go_market"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="去凑单"
                        android:textColor="#FFF6551A"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:src="@mipmap/qg_cart_jump" />
                </LinearLayout>

            </LinearLayout>

            <!--底部结算-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_sure"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/ll_select_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/cb_select_all"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/app_equipment_all_select"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="全选"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/size_14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计："
                            android:textColor="@color/app_black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_toRightOf="@+id/tv1"
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥ 0.0"
                            android:textStyle="bold"
                            android:textColor="#F50404"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_free_tip"
                            android:visibility="gone"
                            android:text="已免运费"
                            android:textColor="#FF6A0A"
                            android:textSize="@dimen/dp_10"
                            android:layout_below="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_orange"
                    android:text="结算"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_color_white"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallPulseIndicator"
        android:visibility="gone"
        style="@style/AVLoadingIndicatorView.Large"
        app:indicatorColor="#f40"
        />

</RelativeLayout>