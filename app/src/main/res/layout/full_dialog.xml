<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="514dp"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@mipmap/cart_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_54dp">

        <TextView
            android:id="@+id/tv_title"
            android:text="满赠优惠"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:textColor="#FF2925"
            android:textSize="@dimen/size_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:text="2020/10/12"
            android:textColor="#333333"
            android:textSize="@dimen/size_11dp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginRight="@dimen/size_17dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@mipmap/icon_car_close"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>