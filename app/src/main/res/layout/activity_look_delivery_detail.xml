<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_help_pay_detail"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_marginRight="@dimen/size_22dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_back_arrow" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="帮付订单"
                    android:textColor="#414141"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_apply_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="申请人:150153562626"
                android:textColor="#FF5D3B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/ic_help_pay_status"
                android:gravity="center"
                android:textColor="#ffffff"
                tools:text="待配送" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_distribution"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/shape_white1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:drawablePadding="@dimen/size_8dp"
                                android:gravity="center"
                                android:text="配送服务"
                                android:textColor="#414141"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_distribution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:textColor="#FE5630"
                                android:textSize="@dimen/sp_12"
                                tools:text="翘歌配送" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_driver_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/new_order_bg"
                            android:paddingBottom="5dp">

                            <TextView
                                android:id="@+id/tv_driver_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@mipmap/driver_iv"
                                android:drawablePadding="10dp"
                                android:text="2019-3-10"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/iv_fresh_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@id/tv_driver_content"
                                android:src="@mipmap/iv_driver_status" />

                            <TextView
                                android:id="@+id/tv_order_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:text="等待接受订单"
                                android:textColor="#FE5630"
                                android:textSize="12sp" />

                            <RelativeLayout
                                android:id="@+id/rl_drive_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_driver_content"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_10dp"
                                android:layout_marginRight="@dimen/size_10dp"
                                android:background="@drawable/shape_pink"
                                android:padding="@dimen/size_12dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_driver_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="程师傅"
                                    android:textColor="#FE5630"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_driver_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_driver_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/tv_driver_name"
                                    android:text="15826523666"
                                    android:textColor="#FE5630"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_order_driver_message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_order_status"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/shape_jianbian10"
                                    android:padding="@dimen/size_5dp"
                                    android:text="查看物流信息"
                                    android:textColor="#ffffff"
                                    android:textSize="10sp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_white1"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_address"
                                android:drawablePadding="@dimen/size_3dp"
                                android:textColor="#414141"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                tools:text="杭州西湖区" />

                            <TextView
                                android:id="@+id/tv_detail_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#898989"
                                android:textSize="@dimen/sp_14"
                                tools:text="浙江省杭州市余杭起梦科创园A1楼14层" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_operate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_full"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/recyclerView"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/new_order_bg" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/commodityAmount"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_goods_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/size_15dp"
                                    android:layout_weight="1"
                                    android:textColor="#898989"
                                    android:textSize="12sp"
                                    tools:text="共33件" />

                                <TextView
                                    android:id="@+id/tv_goods_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="100" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_self_sufficiency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/distributionFee"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_send_desc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#898989"
                                    android:textSize="12sp"
                                    tools:text="订单金额未满200元" />

                                <TextView
                                    android:id="@+id/tv_send_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="100" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/vipSubtractionLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/vipSubtraction"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_full_desc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/size_15dp"
                                    android:layout_weight="1"
                                    android:textColor="#898989"
                                    android:textSize="12sp"
                                    tools:text="满500减3" />

                                <TextView
                                    android:id="@+id/tv_full_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="100" />
                            </LinearLayout>

                            <!--满减活动-->
                            <LinearLayout
                                android:id="@+id/subtractionActivitiesLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/vipSubtractionActivity"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_full_active_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="12000" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutCoupons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/textCoupons"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_coupon_desc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    tools:text="1元无门槛优惠券" />

                                <TextView
                                    android:id="@+id/tv_coupon_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="100" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutCoupons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="支付方式"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="#999999"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_pay_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="100" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutCoupons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_white1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应付金额"
                                android:textColor="@color/app_black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_should_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textColor="#FF320B"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="100" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_replace_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="代下单"
                                    android:textColor="#306AFE"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_replace_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="#999999"
                                    android:textSize="14sp"
                                    tools:text="3" />
                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_replace_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="代支付"
                                    android:textColor="#306AFE"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_replace_pay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textColor="#999999"
                                    android:textSize="14sp"
                                    tools:text="3" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="下单时间"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_create_time"
                                    android:layout_width="215dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="#999999"
                                    android:textSize="@dimen/size_12dp"
                                    tools:text="2022-10-11 12:25:45" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="付款时间"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_pay_time"
                                    android:layout_width="215dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="#999999"
                                    android:textSize="@dimen/size_12dp"
                                    tools:text="2022-10-11 12:25:45" />

                            </RelativeLayout>

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="配送时间段"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_delivery_time"
                                    android:layout_width="215dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="#999999"
                                    android:textSize="14sp"
                                    tools:text="2022-12-20 上午（08:00-11:00）" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="备注"
                                    android:textColor="@color/app_black"
                                    android:textSize="@dimen/size_12dp" />

                                <TextView
                                    android:id="@+id/tv_memo"
                                    android:layout_width="215dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="#999999"
                                    android:textSize="14sp"
                                    tools:text="请输入您的备注" />

                            </RelativeLayout>

                        </LinearLayout>

                        <include layout="@layout/fragment_confirm_order_foot" />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/ll_collect_bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/LinearLayout"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_jianbian17"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_vip_content_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/iv_vip"
                            android:drawablePadding="@dimen/size_3dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="8dp"
                            android:text="开通会员本单立减"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_amount_spec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/tv_tv_vip_content_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="，随后享受单单满减优惠"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_go_market"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="去开通"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>