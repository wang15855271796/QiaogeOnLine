<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/ll_root"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginLeft="@dimen/size_5dp"
    android:layout_height="106dp">

    <RelativeLayout
        android:layout_width="78dp"
        android:layout_marginTop="@dimen/size_6dp"
        android:layout_height="wrap_content">

        <com.puyue.www.qiaoge.RoundImageView
            android:id="@+id/iv_pic"
            android:layout_width="78dp"
            android:layout_height="78dp"/>

        <ImageView
            android:id="@+id/iv_not_send"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_not_send2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/size_6dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:text="【翘歌】商品名称名称名称名称…"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_price"
            android:textColor="#FF2925"
            android:textSize="@dimen/sp_16"
            tools:text="120"
            android:layout_marginTop="@dimen/size_6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_save_price"
            android:textColor="#FF2925"
            android:textSize="@dimen/public_space_value_13"
            android:text="赠商品、券"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingRight="@dimen/size_9dp"
            android:paddingLeft="@dimen/size_9dp"
            android:background="@drawable/shape_yellow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>