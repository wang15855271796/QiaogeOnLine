<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90dp"
            android:background="#000000">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="51dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_55dp"
                android:text="翘歌学堂"
                android:textColor="#ffffff"
                android:textSize="18dp" />





            <TextView
                android:id="@+id/tv_activity_goods_title_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="筛选"

                android:textColor="@color/app_front_black"
                android:textSize="15dp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <com.puyue.www.qiaoge.MyStandardGSYVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12dp"
            android:background="@mipmap/bg_green_video"
            android:drawableLeft="@mipmap/icon_player_tip"
            android:drawablePadding="@dimen/size_2dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_2dp"
            android:text="播放量:3945"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_20dp"
            android:text="2023-02-31 15:30:12"
            android:textColor="#ffffff"
            android:textSize="11sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginLeft="@dimen/size_12dp"
        android:textColor="#ffffff"
        android:text="【视频名称】视频名称视频名称视频名称视频名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_desc"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginLeft="@dimen/size_12dp"
        android:textColor="#AEAEAE"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/size_12dp"
        android:text="视频说明视频说明视频说明视频说明视频说明视频说明说明视频
说明视频说明说明视频说明视频说明说明视频说明视频说明说明视频说明视频说明"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>