<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_root"
        android:background="@mipmap/bg_exchange"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:text="兑换优惠券"
                android:textColor="@color/app_top_bar_text"
                android:textSize="@dimen/size_18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="可兑换金额(元)"
                        android:textColor="#414141"
                        android:layout_marginLeft="@dimen/size_27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:layout_toRightOf="@+id/tv_amount"
                        android:background="@drawable/shape_jianbian10"
                        android:paddingRight="@dimen/size_5dp"
                        android:paddingLeft="@dimen/size_5dp"
                        android:paddingTop="@dimen/size_2dp"
                        android:paddingBottom="@dimen/size_2dp"
                        android:text="一键兑换"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_amount"
                    android:text="3562.00"
                    android:textColor="#F76033"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/size_27dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_consume"
                    android:text="消耗金额"
                    android:textColor="#F75B2E"
                    android:drawableLeft="@mipmap/ic_ex_money"
                    android:layout_marginLeft="@dimen/size_27dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_marginRight="@dimen/size_30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/iv_ex_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/size_27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@mipmap/ic_ex_dui"
                android:drawablePadding="@dimen/size_5dp"
                android:text="兑换专区"
                android:textColor="#414141"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_30dp"
                android:layout_marginRight="@dimen/size_25dp"
                android:background="@drawable/shape_pink3"
                android:padding="@dimen/size_3dp"
                android:text="添加+"
                android:textColor="#F7592A" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_root" />

    <TextView
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_42dp"
        android:background="@drawable/shape_jianbian5"
        android:gravity="center"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</RelativeLayout>