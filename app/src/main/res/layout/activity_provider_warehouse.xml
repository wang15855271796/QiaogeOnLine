<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/shape_white4">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_18dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:padding="5dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="供应商入驻"
            android:textColor="#414141"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_jianbian28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_provider" />

        <TextView
            android:id="@+id/tv1"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="你好，"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_below="@+id/tv1"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="欢迎成为翘歌供应商"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_grey3"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:textColor="#414141"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_yzm"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_grey3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:textColor="#414141"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_22dp"
            android:paddingTop="@dimen/size_11dp"
            android:paddingRight="@dimen/size_22dp"
            android:paddingBottom="@dimen/size_11dp"
            android:text="获取验证码"
            android:textColor="#FF3E20"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/shape_jianbian5"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>