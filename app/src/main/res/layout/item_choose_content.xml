<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_fresh_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10dp"
            android:src="@mipmap/ic_refresh_price" />

        <TextView
            android:layout_toRightOf="@+id/iv_fresh_price"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="#FE5630"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="1.5/盒" />

        <TextView
            android:id="@+id/tv_unit"
            tools:text="(1箱10盒)"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_old_price"
            tools:text="(1箱10盒)"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="@dimen/size_28dp"
            android:layout_height="@dimen/size_16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/tv_old_price"
            android:paddingLeft="@dimen/size_5dp"
            android:paddingRight="@dimen/size_5dp" />


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/iv_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/app_reduce" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cart_price"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/app_front_black"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/app_add" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_trend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20dp">

       <ImageView
           android:src="@mipmap/icon_trend"
           android:layout_marginLeft="@dimen/size_15dp"
           android:layout_gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_weight"
            android:layout_marginLeft="@dimen/dp_10"
            tools:text="重量"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl_desc"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:background="@drawable/bg_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_coupon_desc"
            tools:text="111111111111"
            android:textColor="#FF680A"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>