<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:boy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"/>


        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinator"
                android:fitsSystemWindows="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.puyue.www.qiaoge.view.CustomAppbarLayout
                    android:id="@+id/appbar"
                    android:fitsSystemWindows="false"
                    boy:elevation="0dp"
                    app:layout_behavior="com.yuruiyin.appbarlayoutbehavior.AppBarLayoutBehavior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9">

                    <RelativeLayout
                        android:id="@+id/rl_grand"
                        boy:layout_scrollFlags="scroll|exitUntilCollapsed"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_scroll"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!--有背景色-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:id="@+id/ll_bgc"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@mipmap/bg_wy_home" />

                                <RelativeLayout
                                    android:id="@+id/rl_head"
                                    android:layout_marginTop="150dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_head"
                                    android:layout_marginTop="-25dp"
                                    android:background="@drawable/shape_white1"
                                    android:orientation="vertical">

                                    <com.frankfancode.marqueeview.MarqueeView
                                        android:id="@+id/marquee"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/size_32dp"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/size_6dp"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:background="@drawable/shape_white1"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/size_12dp"
                                        android:layout_marginTop="@dimen/size_45dp"
                                        android:layout_marginRight="@dimen/size_12dp"
                                        android:background="@drawable/shape_white1"
                                        android:orientation="vertical">


                                        <!--顶部的六种推荐-->
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_recommend"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_icon"
                                            android:layout_width="match_parent"
                                            android:layout_height="120dp"
                                            android:layout_marginTop="@dimen/dp_4" />

                                        <com.puyue.www.qiaoge.view.HIndicators
                                            android:id="@+id/indicator"
                                            android:layout_width="@dimen/size_22dp"
                                            android:layout_height="@dimen/size_3dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginBottom="@dimen/size_5dp" />

                                        <com.puyue.www.qiaoge.banner.Banner
                                            android:id="@+id/banner"
                                            android:layout_width="match_parent"
                                            android:layout_height="120dp"
                                            android:layout_marginLeft="@dimen/dp_10"
                                            android:layout_marginRight="@dimen/dp_10" />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl_huo"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/size_38dp"
                                        android:layout_marginLeft="@dimen/size_12dp"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:layout_marginRight="@dimen/size_12dp"
                                        android:background="@drawable/shape_orange11"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/tv_order_num"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/size_11dp"
                                            android:text="您有一笔订单呼叫货拉拉"
                                            android:textColor="#FF481A"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:id="@+id/tv_look"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="@dimen/size_15dp"
                                            android:background="@drawable/shape_jianbian1"
                                            android:paddingLeft="8dp"
                                            android:paddingTop="@dimen/size_3dp"
                                            android:paddingRight="@dimen/size_8dp"
                                            android:paddingBottom="@dimen/size_3dp"
                                            android:text="请查看"
                                            android:textColor="#ffffff"
                                            android:textSize="@dimen/sp_12" />

                                    </RelativeLayout>

                                    <include layout="@layout/home_view_wy" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <include layout="@layout/view_barss"/>

                </com.puyue.www.qiaoge.view.CustomAppbarLayout>

                <com.puyue.www.qiaoge.view.MyScrollView2
                    android:id="@+id/my_scroll"
                    boy:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/fl_container"
                        boy:layout_scrollFlags="scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.puyue.www.qiaoge.view.MyScrollView2>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:alpha="0"
                android:background="#ffffff" />

            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_marginTop="132dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_33dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_red14"
                    android:drawableLeft="@mipmap/ic_market_search"
                    android:drawablePadding="@dimen/size_10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="商品搜索"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include layout="@layout/view_bars" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/lav_activity_loading"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                android:visibility="gone"
                style="@style/AVLoadingIndicatorView.Large"
                app:indicatorColor="#f40"
                />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_address"
                android:layout_alignParentBottom="true"
                android:background="#FFFACA"
                android:layout_width="match_parent"
                android:layout_height="73dp">

                <TextView
                    android:id="@+id/tv"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/size_44dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:text="当前地址不在配送范围内，建议您 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="修改地址"
                    android:id="@+id/tv_change_address"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_toRightOf="@+id/tv"
                    android:padding="@dimen/size_5dp"
                    android:background="@drawable/shape_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_below="@+id/tv"
                    android:layout_marginLeft="@dimen/size_44dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:text="或"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="修改城市"
                    android:id="@+id/tv_change"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/tv"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:padding="@dimen/size_5dp"
                    android:background="@drawable/shape_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tv2"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_below="@+id/tv"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_toRightOf="@+id/tv_change"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:text="以便您能够正常下单!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_60dp">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="15dp"
                    android:layout_height="@dimen/size_18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_address_white" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginRight="@dimen/size_60dp"
                    android:layout_toRightOf="@+id/iv_location"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="@dimen/size_3dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:text="杭州.余杭区" />

                <ImageView
                    android:id="@+id/iv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_city"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_toRightOf="@+id/tv_city"
                    android:src="@mipmap/ic_home_location_img"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_message"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/homeMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_mine_email_white" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-2dp"
                        android:layout_toRightOf="@+id/homeMessage"
                        android:background="@drawable/bg_msg_count"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="9dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </RelativeLayout>

            <include layout="@layout/home_tip_iv_wy" />

            <!--  优惠券  -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_coupon"
                android:layout_width="79dp"
                android:orientation="vertical"
                android:layout_height="@dimen/size_93dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/size_88dp"
                android:background="@drawable/my_amin" >

                <TextView
                    android:id="@+id/tv_coupon_num"
                    tools:text="6张"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/size_40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="优惠券"
                    android:textSize="11sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="还有优惠券哦"
                    android:textSize="10sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="1dp"
                    android:background="@drawable/shape_yellow4"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:textColor="#DB250A"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_15dp"/>
            </LinearLayout>
            <!--  优惠券  -->

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_coupon"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:src="@mipmap/icon_red_half"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/size_88dp">

            </ImageView>

            <!--  学堂  -->
            <LinearLayout
                android:id="@+id/ll_school"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="240dp">

                <ImageView
                    android:id="@+id/iv_school"
                    android:background="@mipmap/iv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@mipmap/icon_enter"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <!--  学堂  -->
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_school"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:src="@mipmap/iv_half_school"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/size_88dp">

            </ImageView>

            <com.frankfancode.marqueeview.MarqueeView
                android:id="@+id/order_marquee"
                android:layout_width="166dp"
                android:visibility="gone"
                android:layout_height="@dimen/size_46dp"
                android:alpha="0.7"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/size_25dp"
                android:background="@drawable/shape_grey10" />

        </RelativeLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</FrameLayout>

