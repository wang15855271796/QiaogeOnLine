<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:background="@drawable/shape_choose_address"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:paddingBottom="@dimen/size_30dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_62dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="请选择配送服务"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_cb1"
            android:gravity="center_vertical"
            android:background="@drawable/shape_grey9"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_22dp"
            android:layout_height="@dimen/size_60dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20dp"
                android:text="翘歌配送"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:text="(200免配送费)"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_choose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_marginRight="@dimen/size_36dp"
                android:src="@mipmap/icon_gous" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cb2"
            android:layout_marginRight="@dimen/size_22dp"
            android:layout_marginLeft="@dimen/size_22dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_grey9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20dp"
                android:text="我自己叫货拉拉"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_huo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="(订单支付后，买家自己呼叫货拉拉)"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_choose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_marginRight="@dimen/size_36dp"
                android:src="@mipmap/icon_gous" />

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_sure"
            android:layout_marginTop="@dimen/size_40dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:text="选好了"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/shape_orange2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"/>

    </LinearLayout>

</LinearLayout>