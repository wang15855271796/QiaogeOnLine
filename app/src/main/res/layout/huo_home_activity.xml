<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f4f4f4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_root"
            android:orientation="horizontal"
            android:background="@mipmap/huo_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/qg_cart_back"
                android:layout_marginTop="@dimen/size_56dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_huo"
                android:src="@mipmap/icon_huo"
                android:layout_marginTop="@dimen/size_56dp"
                android:layout_marginLeft="@dimen/size_39dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/rg_group"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_50dp"
                android:background="@drawable/shape_huo_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_quick"
                    android:button="@null"
                    android:text="快速下单"
                    android:background="@drawable/shape_white3"
                    android:textColor="#FD6601"
                    android:padding="@dimen/size_3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:padding="@dimen/size_3dp"
                    android:clickable="false"
                    android:id="@+id/rb_order"
                    android:button="@null"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:text="我的订单"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_marginTop="@dimen/size_19dp"
                android:layout_below="@+id/rg_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_location"
                    tools:text="杭州"
                    android:textSize="@dimen/sp_14"
                    android:drawablePadding="@dimen/size_5dp"
                    android:drawableLeft="@mipmap/ic_location"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_toLeftOf="@+id/tv_phone"
                    android:src="@mipmap/icon_user"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_phone"
                    tools:text="123456789"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/content"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="140dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tl:tabIndicatorColor="#ffffff"
                tl:tl_indicator_margin_bottom="10dp"
                tl:tl_indicator_width="18dp"
                tl:tl_textAllCaps="true"
                tl:tabMode="scrollable"
                app:tl_tab_space_equal="true"
                tl:tl_textBold="BOTH"
                tl:tabIndicatorHeight="@dimen/dp_4"
                tl:tabTextColor="#ffffff"
                tl:tl_textSelectColor="#ffffff"
                tl:tl_textUnselectColor="#ffffff"
                tl:tl_textsize="@dimen/size_16dp" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_white5"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_white6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="附加要求:"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_17dp"
                        android:src="@mipmap/icon_zhuang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_zhuang"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="请输入装货地址"
                        android:textColor="#333333"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/size_14dp"
                        android:layout_marginRight="@dimen/size_16dp"
                        android:background="@drawable/shape_grey4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_17dp"
                        android:src="@mipmap/icon_xie" />

                    <TextView
                        android:id="@+id/tv_unload"
                        android:gravity="center"
                        android:hint="未填写联系人"
                        android:textColor="#333333"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/size_14dp"
                        android:layout_marginRight="@dimen/size_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/size_15dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        tools:text="300"
                        android:textColor="#333333"
                        android:textSize="@dimen/size_30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="元"
                        android:drawablePadding="@dimen/size_5dp"
                        android:textColor="#333333"
                        android:drawableRight="@mipmap/rightarrow"
                        android:textSize="@dimen/size_18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_12dp"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48dp">

                    <TextView
                        android:text="现在用车"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_orange3"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:text="预约"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/shape_orange8"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>