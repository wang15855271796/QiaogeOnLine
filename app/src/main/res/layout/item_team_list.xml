<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_15dp">


        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_15dp"
                tools:src="@mipmap/icon_baidu" />

            <View
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/app_sub_account_item_btn" />

            <ImageView
                android:id="@+id/iv_sale_done"
                android:layout_width="@dimen/size_27dp"
                android:layout_height="@dimen/size_27dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/size_5dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_10"
            tools:text="销量1000" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            tools:text="华清源腿排腿排华排......................" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_operate"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_8dp"
            android:text="15.0"
            android:textColor="#F11705"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_add"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            tools:src="@mipmap/icon_next" />

        <ImageView
            android:id="@+id/iv_operate"
            android:layout_width="@dimen/size_32dp"
            android:layout_height="12dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_3dp"
            android:layout_toRightOf="@+id/iv_next"
            tools:src="@mipmap/icon_operate" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_fresh_price"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:layout_toRightOf="@+id/iv_operate"
            android:src="@mipmap/ic_refresh_price" />

        <ImageView
            android:id="@+id/iv_after_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_add"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_after_next"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_operate"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="价格授权后可见"
            android:textColor="#FF5000"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/size_21dp"
            android:layout_height="@dimen/size_21dp"
            android:layout_below="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:src="@mipmap/app_add1" />

        <View
            android:id="@+id/v_champion"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_space_value_0.5"
            android:layout_below="@+id/iv_operate"
            android:layout_marginLeft="@dimen/size_6dp"
            android:layout_marginTop="@dimen/size_6dp"
            android:layout_marginRight="@dimen/size_6dp"
            android:background="#f8f8f8" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_champion"
            android:layout_marginRight="@dimen/size_3dp"
            android:layout_marginLeft="@dimen/size_3dp"
            android:background="@drawable/shape_orange23"
            android:layout_below="@+id/iv_add"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_23dp">

            <TextView
                android:id="@+id/tv_champion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_13dp"
                android:drawableLeft="@mipmap/icon_hot"
                android:drawablePadding="2dp"
                android:background="@drawable/shape_orange23"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="热销TOP榜单 >"
                android:textColor="#FD4900"
                android:textSize="10sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_20dp"
            android:src="@mipmap/icon_not_send2"
            android:visibility="gone" />


    </RelativeLayout>
</LinearLayout>