<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:anroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_group"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="8dp"
        android:layout_height="114dp">

        <com.puyue.www.qiaoge.RoundImageView
            android:id="@+id/iv_pic"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_baidu"
            android:layout_width="@dimen/size_97dp"
            android:layout_height="@dimen/size_97dp" />


        <TextView
            android:textColor="#333333"
            android:maxLines="1"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_below="@+id/rl_pic"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:text="华清源腿排腿排华排..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="15.0"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:id="@+id/tv_price"
                android:textStyle="bold"
                android:paddingTop="1dp"
                android:gravity="center_horizontal"
                android:paddingBottom="1dp"
                android:background="@drawable/shape_green_full"
                android:layout_marginTop="@dimen/size_45dp"
                android:textSize="@dimen/size_16dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <!--<TextView-->
            <!--tools:text="15.0"-->
            <!--android:lines="1"-->
            <!--android:layout_toRightOf="@+id/tv_price"-->
            <!--android:ellipsize="end"-->
            <!--android:textColor="#b5b5b5"-->
            <!--android:id="@+id/tv_old_price"-->
            <!--android:paddingTop="1dp"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:paddingBottom="1dp"-->
            <!--android:layout_marginTop="@dimen/size_46dp"-->
            <!--android:textSize="@dimen/size_12dp"-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:visibility="gone"
                android:textColor="#333333"
                android:paddingLeft="@dimen/size_5dp"
                android:paddingRight="@dimen/size_5dp"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_marginTop="50dp"
                android:textSize="@dimen/sp_12"
                android:text="价格授权后可见"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_coupon"
            android:layout_marginTop="@dimen/size_25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:textColor="#ffffff"
                android:id="@+id/tv_shop"
                android:background="@drawable/shape_full_reds"
                android:layout_marginRight="@dimen/size_15dp"
                android:textSize="@dimen/sp_14"
                android:text="赠送商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:textColor="#ffffff"
                android:id="@+id/tv_coupon"
                android:background="@drawable/shape_full_reds"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginTop="23dp"
                android:textSize="@dimen/sp_14"
                android:text="赠优惠券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>