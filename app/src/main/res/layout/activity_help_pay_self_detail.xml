                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_unOperate"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_40dp">

                                <ImageView
                                    android:id="@+id/tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_16dp"
                                    android:src="@mipmap/iv_pack2"
                                    android:text="包裹2" />

                                <TextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_10dp"
                                    android:layout_toRightOf="@+id/tv2"
                                    tools:text="以下商品暂不支持 “我自己叫货拉拉”"
                                    android:textColor="#FF2925"
                                    android:textSize="12sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layout_below="@+id/tv2"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="@dimen/size_16dp"
                                    android:background="@drawable/shape_dash_red" />

                                <ImageView
                                    android:id="@+id/iv_pic"
                                    android:visibility="gone"
                                    android:layout_toRightOf="@+id/tv_title"
                                    tools:src="@mipmap/icon_after_next"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_unOperate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:textColor="#F56E24"
                                    android:textSize="@dimen/dp_10"
                                    tools:text="现在下单，预计明天日(9月19日)开始配送" />

                            </RelativeLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView1"
                                android:layout_marginRight="@dimen/size_8dp"
                                android:layout_marginLeft="@dimen/size_8dp"
                                android:background="@drawable/shape_white6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                            <RelativeLayout
                                android:id="@+id/rl_arrow"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_below="@+id/rv_unable"
                                android:layout_marginRight="@dimen/size_8dp"
                                android:layout_marginLeft="@dimen/size_8dp"
                                android:background="@drawable/shape_white6"
                                android:layout_height="@dimen/size_30dp">

                                <TextView
                                    android:id="@+id/tv_open"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/size_30dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="12dp"
                                    android:drawablePadding="@dimen/dp_10"
                                    android:text="展开"
                                    android:textColor="#999999"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_open"
                                    android:layout_marginLeft="@dimen/size_3dp"
                                    android:layout_toRightOf="@+id/tv_open"
                                    android:layout_centerInParent="true"
                                    android:src="@mipmap/icon_arrow_down"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/commodityAmount"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_goods_num"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/size_15dp"
                                    tools:text="共33件"
                                    android:textColor="#898989"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_goods_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    tools:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/vipSubtractionLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/vipSubtraction"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    tools:text="满500减3"
                                    android:id="@+id/tv_full_desc"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/size_15dp"
                                    android:textColor="#898989"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_full_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!--满减活动-->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/subtractionActivitiesLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/vipSubtractionActivity"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:text="12000"
                                    android:id="@+id/tv_full_active_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textStyle="bold"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutCoupons"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/textCoupons"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_coupon_desc"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    tools:text="1元无门槛优惠券"
                                    android:textColor="#999999"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_coupon_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/app_black"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_white1"
                            android:id="@+id/linearLayoutCoupons"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应付金额"
                                android:textColor="@color/app_black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_should_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="100"
                                android:textColor="#FF320B"
                                android:textStyle="bold"
                                android:gravity="right"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/ll_order1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:text="代下单"
                                    android:textColor="#306AFE"
                                    android:textSize="10sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_replace_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    tools:text="3"
                                    android:textColor="#999999"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_order2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:text="待支付"
                                    android:textColor="#306AFE"
                                    android:textSize="10sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_replace_pay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    tools:text="3"
                                    android:textColor="#999999"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/size_10dp">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="下单时间"
