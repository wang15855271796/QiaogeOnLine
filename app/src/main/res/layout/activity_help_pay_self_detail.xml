<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/bg_help_pay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_marginRight="@dimen/size_22dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_back_arrow" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="帮我付款"
                    android:textColor="#414141"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_apply_person"
                android:textStyle="bold"
                android:text="申请人:150153562626"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#FF5D3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    >

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_distribution"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_white1"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:drawablePadding="@dimen/size_8dp"
                                android:gravity="center"
                                android:text="配送服务"
                                android:textColor="#414141"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_distribution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:textColor="#FE5630"
                                android:textSize="@dimen/sp_12"
                                tools:text="到仓自提" />

                        </RelativeLayout>

                        <LinearLayout
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:background="@drawable/shape_white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="自提点"
                                android:drawablePadding="@dimen/size_3dp"
                                android:drawableLeft="@mipmap/iv_self_small"
                                android:textColor="#FE5630"
                                android:textSize="12sp" />

                            <ImageView
                                android:src="@mipmap/iv_line"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_address_orange"
                                android:drawablePadding="@dimen/size_3dp"
                                tools:text="杭州西湖区"
                                android:textColor="#414141"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_detail_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="浙江省杭州市余杭起梦科创园A1楼14层"
                                android:textColor="#898989"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/shape_white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="提货人"
                                    android:textColor="#9C9C9C"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="自提手机号"
                                    android:textColor="#9C9C9C"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_take_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    tools:text="请输入提货人姓名"
                                    android:textColor="#414141"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_take_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    tools:text="17647481524"
                                    android:textColor="#414141"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                        <RelativeLayout
                            android:padding="12dp"
                            android:background="@drawable/shape_white1"
                            android:layout_width="match_parent"
                            android:layout_height="83dp">

                            <TextView
                                android:id="@+id/tv_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="自提时间"
                                android:textStyle="bold"
                                android:textColor="#414141"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_take_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#858585"
                                android:textSize="12sp"
                                tools:text="2022-12-12 (上午) 09:00-12:00" />

                            <TextView
                                android:id="@+id/tv_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_25dp"
                                android:text="温馨提示：仓库不提供储服务，超过自提时间需要退货重新下单，请及时提货哦!"
