                                    android:textSize="@dimen/size_12dp" />

                                <TextView
                                    android:id="@+id/tv_memo"
                                    android:layout_width="215dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
