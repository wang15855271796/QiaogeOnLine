<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="265dp">

        <TextView
            android:text="请选择店铺类型"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginRight="@dimen/size_23dp"
                android:layout_marginLeft="@dimen/size_23dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </ScrollView>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_sure"
        android:layout_marginBottom="@dimen/size_20dp"
        android:text="请选择店铺类型"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/size_23dp"
        android:layout_marginRight="@dimen/size_21dp"
        android:layout_marginLeft="@dimen/size_21dp"
        android:padding="@dimen/size_10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/shape_jianbian5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>