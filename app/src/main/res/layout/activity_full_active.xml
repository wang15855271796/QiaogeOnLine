<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
<!--    android:background="@mipmap/bg_full_active"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@mipmap/bg_full_active1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/size_11dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_marginTop="@dimen/size_45dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:padding="10dp"
                        android:src="@mipmap/ic_back_arrow" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="参加满赠活动商品"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/size_12dp"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:background="@drawable/shape_white1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_roll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_11dp"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:text="购买以下商品满2箱，赠 （可叠加5次）："
                            android:textColor="#333333"
                            android:textSize="@dimen/size_11dp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/size_18dp"
                            android:id="@+id/tv_more"
                            android:text="查看更多>"
                            android:textColor="#FF8A00"
                            android:textSize="@dimen/sp_12"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:background="@drawable/shape_yellow8"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/size_8dp"
                        android:layout_marginRight="@dimen/size_8dp"
                        android:layout_marginBottom="@dimen/size_8dp"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_full_given"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginBottom="@dimen/size_95dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_tips"
            android:background="@drawable/shape_yellow7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_gravity="center_vertical"
                android:text="提示：您的满赠机会已经用完了哦！"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginLeft="@dimen/size_11dp"
                android:drawablePadding="@dimen/size_5dp"
                android:drawableLeft="@mipmap/icon_tip1"
                android:textColor="#FF8A00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_65dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:text="小计:"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_toRightOf="@+id/tv1"
                android:textColor="#FF8A00"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                tools:text="20" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_toRightOf="@+id/tv_total"
                android:textColor="#FF8A00"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                tools:text="20" />

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="@dimen/size_93dp"
                android:layout_height="@dimen/size_33dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:background="@drawable/shape_jianbian19"
                android:gravity="center"
                android:text="去购物车"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>