<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        android:background="@mipmap/suggest_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_feedback"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/ll_root"
        android:layout_marginTop="-100dp"
        android:background="@drawable/shape_white5"
        android:gravity="top"
        android:hint="感谢您使用翘歌APP，使用过程中有任何意见或建议请反馈给我们！"
        android:padding="23dp"
        android:textColor="#232131"
        android:textColorHint="#B5B4B4"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_40dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_17dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="#414141"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_35dp"
        android:background="@drawable/shape_jianbian5"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>