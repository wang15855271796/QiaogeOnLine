<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/size_8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_group"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.puyue.www.qiaoge.RoundImageView
            android:id="@+id/iv_pic"
            android:layout_marginLeft="@dimen/size_8dp"
            tools:src="@mipmap/bg_emptys"
            android:scaleType="fitXY"
            android:layout_width="121dp"
            android:layout_height="121dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_send"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/icon_not_send2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="121dp">

            <TextView
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                android:maxLines="1"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_below="@+id/rl_pic"
                android:ellipsize="end"
                android:textSize="@dimen/sp_12"
                tools:text="华清源腿排腿排华排..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                tools:text="15.0000"
                android:textColor="#ffffff"
                android:lines="1"
                android:layout_marginLeft="@dimen/size_15dp"
                android:ellipsize="end"
                android:id="@+id/tv_price"
                android:background="@drawable/shape_greenss"
                android:paddingRight="@dimen/size_8dp"
                android:paddingLeft="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_25dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/size_12dp"
                android:layout_below="@+id/tv_name"
                android:layout_width="@dimen/size_60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:textColor="#333333"
                android:paddingLeft="@dimen/size_5dp"
                android:paddingRight="@dimen/size_5dp"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_marginTop="@dimen/size_25dp"
                android:textSize="@dimen/sp_12"
                android:text="价格授权后可见"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/rl_coupon"
                android:layout_marginTop="75dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:id="@+id/tv_coupon"
                    android:background="@drawable/shape_full_reds"
                    android:textSize="@dimen/sp_14"
                    android:text="赠优惠券"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_below="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_shop"
                    android:background="@drawable/shape_full_reds"
                    android:textSize="@dimen/sp_14"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="赠送商品"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>