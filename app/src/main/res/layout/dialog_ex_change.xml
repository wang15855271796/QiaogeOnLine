<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:background="@drawable/shape_choose_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingBottom="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="兑换优惠券"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/size_22dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/size_20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="券额"
                        android:textStyle="bold"
                        android:textColor="#FF592E"
                        android:textSize="@dimen/sp_16"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="数量"
                        android:textStyle="bold"
                        android:textColor="#FF592E"
                        android:textSize="@dimen/sp_16"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="消耗余额"
                        android:textStyle="bold"
                        android:textColor="#FF592E"
                        android:textSize="@dimen/sp_16"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_marginRight="@dimen/size_34dp"
                        android:background="@drawable/shape_pink1"
                        android:gravity="center"
                        android:textColor="#FF6F08"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        tools:text="兑换总额：10000元" />

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_add_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/size_13dp"
                android:layout_marginRight="@dimen/size_13dp"
                android:background="@drawable/shape_jianbian5"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="10dp"
                android:paddingBottom="@dimen/dp_10"
                android:text="立即兑换"
                android:textColor="@color/app_color_white"
                android:textSize="18dp" />
        </RelativeLayout>


    </ScrollView>



</LinearLayout>