<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_distribution"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_white1"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:drawableLeft="@mipmap/ic_deliver"
                            android:drawablePadding="@dimen/size_8dp"
                            android:gravity="center"
                            android:text="配送服务"
                            android:textColor="#414141"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_height="@dimen/size_60dp">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/tv_distribution"
                                android:textColor="#FF5C00"
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/sp_12"
                                android:hint="请选择配送服务"
                                android:gravity="right"
                                android:textColorHint="#414141"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/iv_deliver"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/tv_distribution"
                                android:src="@mipmap/rightarrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </RelativeLayout>

                    <include layout="@layout/activity_confirm_order_head_two" />

                    <LinearLayout
                        android:id="@+id/ll_operate"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <ImageView
                                android:id="@+id/tv_operate_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:src="@mipmap/iv_pack1"
                                android:text="包裹1" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_send_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_operate_title"
                                android:textColor="#FD552E"
                                android:textSize="12sp"
                                tools:text="现在下单，预计后天(06月14日)17:00~19:00送达" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_below="@+id/tv_operate_title"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/shape_dash_red" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/iv_operate_pic"
                                android:layout_toRightOf="@+id/tv_operate_title"
                                tools:src="@mipmap/icon_next"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_operate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:textColor="#FD552E"
                                android:textSize="@dimen/dp_10"
                                tools:text="现在下单，预计明天日(9月19日)开始配送" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!--  系统发送的优惠券货赠品-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_given"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_coupon"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_unOperate"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40dp">

                            <ImageView
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:text="包裹2"
                                android:src="@mipmap/iv_pack2" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_toRightOf="@+id/tv2"
                                tools:text="以下商品暂不支持 “我自己叫货拉拉”"
                                android:textColor="#FF2925"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_below="@+id/tv2"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:background="@drawable/shape_dash_red" />

                            <ImageView
                                android:id="@+id/iv_pic"
                                android:visibility="gone"
                                android:layout_toRightOf="@+id/tv_title"
                                tools:src="@mipmap/icon_after_next"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_unOperate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:textColor="#F56E24"
                                android:textSize="@dimen/dp_10"
                                tools:text="现在下单，预计明天日(9月19日)开始配送" />

                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView1"
                            android:layout_marginRight="@dimen/size_8dp"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:background="@drawable/shape_white6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <RelativeLayout
                            android:id="@+id/rl_arrow"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/rv_unable"
                            android:layout_marginRight="@dimen/size_8dp"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:background="@drawable/shape_white6"
                            android:layout_height="@dimen/size_30dp">

                            <TextView
                                android:id="@+id/tv_open"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/size_30dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="12dp"
                                android:drawablePadding="@dimen/dp_10"
                                android:text="展开"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/iv_open"
                                android:layout_marginLeft="@dimen/size_3dp"
                                android:layout_toRightOf="@+id/tv_open"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/icon_arrow_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_13dp"
                                android:text="商品数量"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_12dp" />

                            <TextView
                                android:id="@+id/subtractionActivitiesPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:gravity="right"
                                android:textColor="#000000"
                                android:textSize="@dimen/size_11dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_13dp"
                                android:text="@string/commodityAmount"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_12dp" />

                            <TextView
                                android:id="@+id/commodityAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:gravity="right"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_11dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_self_sufficiency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_13dp"
                                android:text="@string/distributionFee"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_12dp" />

                            <TextView
                                tools:text="123"
                                android:id="@+id/distributionFee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:textColor="#FF6A0A"
                                android:textSize="@dimen/size_11dp" />

                            <TextView
                                android:id="@+id/distributionFeePrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:gravity="right"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_11dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vipSubtractionLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_13dp"
                                android:text="@string/vipSubtraction"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_12dp" />

                            <TextView
                                android:id="@+id/vipSubtraction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:background="@drawable/app_vipsubtraction_bg"
                                android:paddingLeft="@dimen/size_10dp"
                                android:paddingRight="@dimen/size_10dp"
                                android:textColor="@color/color_DA673D"
                                android:textSize="@dimen/size_13dp"
                                android:visibility="gone" />

                            <TextView

                                android:id="@+id/vipSubtractionPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:gravity="right"
                                android:textColor="@color/color_F6551A"
                                android:textSize="@dimen/size_11dp" />
                        </LinearLayout>
                        <!--满减活动-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/subtractionActivitiesLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:text="@string/vipSubtractionActivity"
                                android:textColor="@color/app_black"
                                android:textSize="@dimen/size_11dp" />

                            <TextView
                                android:id="@+id/subtractionActivities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:background="@drawable/app_vipsubtraction_bg"
                                android:paddingLeft="@dimen/size_10dp"
                                android:paddingRight="@dimen/size_10dp"
                                android:textColor="@color/color_DA673D"
                                android:textSize="@dimen/size_13dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_full_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:gravity="right"
                                android:textColor="@color/color_F6551A"
                                android:textSize="@dimen/size_11dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_white1"
                        android:id="@+id/linearLayoutCoupons"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45dp"
                        android:padding="@dimen/size_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_13dp"
                            android:text="@string/textCoupons"
                            android:textColor="@color/app_black"
                            android:textSize="@dimen/size_12dp" />

                        <TextView
                            android:id="@+id/textCoupons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/size_5dp"
                            android:drawablePadding="@dimen/size_11dp"
                            tools:text="sssssssssssssss"
                            android:textColor="#999999"
                            android:drawableRight="@mipmap/ic_address_icon"
                            android:gravity="right"
                            android:textSize="@dimen/size_12dp" />

                    </LinearLayout>
                    <!--备注-->
                    <RelativeLayout
                        android:id="@+id/ll_beizhu"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_white1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/size_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_13dp"
                            android:text="备注"
                            android:textColor="@color/app_black"
                            android:textSize="@dimen/size_12dp" />

                        <TextView
                            android:id="@+id/tv_beizhu"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size_5dp"
                            android:drawableRight="@mipmap/ic_address_icon"
                            android:drawablePadding="@dimen/size_11dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:hint="请输入您的备注"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#999999"
                            android:textSize="@dimen/size_12dp" />

                    </RelativeLayout>

                    <include layout="@layout/fragment_confirm_order_foot" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/ll_collect_bills"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_above="@+id/LinearLayout"
                android:layout_gravity="center"
                android:background="@drawable/shape_jianbian17"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vip_content_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="2dp"
                        android:drawableLeft="@mipmap/iv_vip"
                        android:drawablePadding="@dimen/size_3dp"
                        android:paddingBottom="8dp"
                        android:text="开通会员本单立减"
                        android:textColor="#ffffff"
                        android:textSize="10sp"/>

                        <TextView
                        android:id="@+id/tv_amount_spec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/tv_tv_vip_content_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="，随后享受单单满减优惠"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_go_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去开通"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_arrow_right" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="合计"
                        android:textColor="#414141"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        tools:text="200"
                        android:textStyle="bold"
                        android:textColor="#F50404"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/textViewDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:text="已优惠"
                        android:textSize="12sp"
                        android:textColor="#858585" />

                </LinearLayout>

                <TextView
                    android:id="@+id/buttonPay"
                    android:layout_width="@dimen/size_86dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/shape_jianbian18"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:text="@string/goPay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/lav_activity_loading"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallPulseIndicator"
            android:visibility="gone"
            style="@style/AVLoadingIndicatorView.Large"
            app:indicatorColor="#f40"
            />

    </RelativeLayout>

</LinearLayout>