<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="40dp"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:layout_marginTop="@dimen/size_70dp"
        android:background="@mipmap/bg_login"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingRight="@dimen/size_20dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_65dp"
            android:text="您好，欢迎来到翘歌！"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:padding="5dp"
            android:src="@mipmap/ic_login_delete" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/public_space_value_80"
            android:layout_marginTop="23dp"
            android:layout_marginRight="@dimen/public_space_value_80"
            android:gravity="center_horizontal"
            android:lineHeight="@dimen/size_20dp"
            android:lines="2"
            android:text="新用户注册成功后将随机抽取无门槛优惠券哦!"
            android:textColor="#ADADAD"
            android:textSize="@dimen/sp_12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_43dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jianbian5"
                    android:gravity="center"
                    android:text="账号注册"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_43dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jianbian5"
                    android:gravity="center"
                    android:text="账号登录"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>