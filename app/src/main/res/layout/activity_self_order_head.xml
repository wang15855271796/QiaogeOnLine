<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_pay"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90dp">

            <ImageView
                android:id="@+id/imageViewBreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:text="订单详情"
                android:textColor="#ffffff"
                android:textSize="16dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/orderLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15dp"
                android:gravity="center_horizontal"
                tools:text="标题"
                android:layout_marginLeft="@dimen/size_25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.puyue.www.qiaoge.view.SnapUpCountDownTimerView3
                android:id="@+id/orderTimerView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/size_25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:gravity="center_horizontal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvOrderContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="收到商品后，可以来评价试试"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/size_25dp"
                android:textSize="@dimen/size_12dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linearLayout_shipped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_order_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_25dp"
                    android:background="@drawable/shape_white9"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="售后"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_copy_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="复制订单"
                    android:textColor="#FF2A00"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/linearLayout_evalute"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_height="wrap_content">


                <TextView
                    android:visibility="gone"
                    android:id="@+id/buttonReturnGood_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white9"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="售后"
                    android:layout_marginLeft="@dimen/size_25dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <!--<TextView
                    android:id="@+id/tv_confirm_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/white_bg"
                    android:paddingLeft="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_10dp"
                    android:paddingRight="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_10dp"
                    android:text="确认收货"
                    android:textColor="@color/color_785DFD"
                    android:textSize="@dimen/size_15dp" />-->

                <TextView
                    android:id="@+id/buttonEvaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white9"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="立即评价"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white9"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="查看评价"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/buttonAgainBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:src="@mipmap/ic_order_two_by"
                    android:text="复制订单"
                    android:textColor="#FE5630"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/threeButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/size_25dp"
                    android:id="@+id/buttonReturnGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/shape_white9"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="售后"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_confirm_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white9"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="确认提货"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/copy_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:src="@mipmap/ic_order_two_by"
                    android:text="复制订单"
                    android:textColor="#FE5630"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/twoButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginLeft="@dimen/size_25dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/buttonCancelOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white9"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="取消订单"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/buttonGOPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:src="@mipmap/ic_order_two_by"
                    android:text="立即付款"
                    android:textColor="#FF2A00"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/linearLayout_get_order"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_get_order_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_25dp"
                    android:background="@drawable/shape_white"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:src="@mipmap/ic_order_two_by"
                    android:text="复制订单"
                    android:textColor="#FE5630"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deleteButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginLeft="@dimen/size_25dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white9"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:text="删除订单"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/tv_buttonAgainBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:background="@drawable/shape_white"
                    android:paddingLeft="@dimen/size_18dp"
                    android:paddingTop="@dimen/size_7dp"
                    android:paddingRight="@dimen/size_18dp"
                    android:paddingBottom="@dimen/size_7dp"
                    android:src="@mipmap/ic_order_two_by"
                    android:text="复制订单"
                    android:textColor="#FE5630"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ReturnGoodsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/size_25dp">

            <TextView
                android:id="@+id/ReturnGoodsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_40dp"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18dp" />

            <TextView
                android:id="@+id/ReturnGoodsContent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_45dp"
                android:gravity="center_horizontal"
                android:text="收到商品后，可以来评价试试"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>