<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/size_6dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.puyue.www.qiaoge.RoundImageView
                android:id="@+id/iv_pic"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_width="103dp"
                android:layout_height="103dp" />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    tools:text="原价:100"
                    android:ellipsize="end"
                    android:lines="1"
                    android:id="@+id/tv_old_price"
                    android:layout_marginTop="@dimen/public_space_value_80"
                    android:padding="@dimen/public_space_value_2"
                    android:textColor="#ffffff"
                    android:background="@drawable/shape_grey_alpha"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                tools:src="@mipmap/icon_not_send"
                android:layout_centerInParent="true"
                android:id="@+id/iv_sale_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="华清源腿排腿排华排..."
            android:textColor="#333333"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#ffffff"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/size_5dp"
            android:paddingRight="@dimen/size_5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/tv_price"
            android:background="@drawable/shape_red_orders"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            tools:text="100.00"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_desc"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/rl_pics"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_below="@+id/tv_name"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:text="价格授权后可见"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

    </RelativeLayout>
</LinearLayout>