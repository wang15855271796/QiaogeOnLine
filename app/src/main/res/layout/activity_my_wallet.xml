<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_jb1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:src="@mipmap/ic_back_arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="13dp"
                            android:text="余额"
                            android:textColor="@color/app_top_bar_text"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="186dp"
                            android:orientation="vertical"
                            android:paddingLeft="20dp">

                            <LinearLayout
                                android:layout_marginTop="@dimen/size_25dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_my_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="我的余额(元)"
                                    android:textColor="#804D16"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_amount_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/tv_my_amount"
                                    android:background="@drawable/shape_red1"
                                    android:padding="2dp"
                                    android:text="明细 >"
                                    android:textColor="#ffffff"
                                    android:textSize="13sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="70dp"
                                android:text="52.00"
                                android:textColor="#804D16"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginTop="-60dp"
                            android:orientation="vertical"
                            android:background="@drawable/shape_yellow12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_bill_header"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_16dp"
                                    android:layout_marginTop="10dp"
                                    android:text="余额充值，即充即用"
                                    android:textColor="#414141"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_bill_header"
                                    android:layout_marginLeft="@dimen/size_16dp"
                                    android:layout_marginRight="@dimen/sp_14"
                                    android:text="充值余额享受翘歌余额支付  还有赠品相送！"
                                    android:textColor="#A3A3A3"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_marginBottom="90dp"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical"
                                android:background="@drawable/shape_white1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerView"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="充"
                                        android:padding="2dp"
                                        android:textSize="15sp"
                                        android:layout_marginLeft="14dp"
                                        android:textColor="#ffffff"
                                        android:layout_marginTop="15dp"
                                        android:background="@drawable/shape_jb6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text="自定义充值（元）"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="5dp"
                                        android:drawablePadding="5dp"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:textColor="#414141"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                                <EditText
                                    android:id="@+id/et_amount"
                                    android:layout_marginLeft="14dp"
                                    android:layout_marginRight="14dp"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14sp"
                                    android:paddingLeft="5dp"
                                    android:hint="请输入您要充值的金额"
                                    android:background="@drawable/shape_grey4"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"/>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="券"
                                        android:padding="2dp"
                                        android:textSize="15sp"
                                        android:layout_marginLeft="14dp"
                                        android:textColor="#ffffff"
                                        android:layout_marginTop="15dp"
                                        android:background="@drawable/shape_jb6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text="赠以下优惠券"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="5dp"
                                        android:drawablePadding="5dp"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:textColor="#414141"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_coupon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_bill_money" />


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_white4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_tips"
                android:drawablePadding="5dp"
                android:text="充值即表示同意"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《预付卡章程及购卡协议》"
                android:textColor="#FF3E05"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_jb2"
            android:gravity="center"
            android:text="充值"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:text="余额"
            android:textColor="#414141"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>