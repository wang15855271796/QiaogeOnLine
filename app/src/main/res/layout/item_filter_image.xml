<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="@dimen/public_space_value_80"
            android:layout_height="@dimen/public_space_value_80"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/post_photo" />

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/size_2dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_player"
            android:visibility="gone"
            android:src="@mipmap/icon_player"
            android:layout_width="@dimen/size_34dp"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/size_34dp"/>

    </RelativeLayout>

</RelativeLayout>