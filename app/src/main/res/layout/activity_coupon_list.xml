<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:background="@mipmap/bg_coupon1"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_arrow" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="标题" />

            <RelativeLayout
                android:id="@+id/rl_good_cart"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:layout_width="@dimen/size_60dp"
                android:layout_height="@dimen/size_48dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_tab_cart_unable" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_cart"
                    android:background="@drawable/shape_car_num"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="7dp"
                    android:visibility="gone"
                    tools:text="9" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/iv_start"
                    android:layout_width="@dimen/public_space_value_120"
                    android:layout_height="match_parent"
                    android:src="@mipmap/iv_coupon_title1" />

                <TextView
                    android:id="@+id/tv_start"
                    android:visibility="gone"
                    android:layout_width="@dimen/public_space_value_120"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_un_start"
                    android:layout_width="@dimen/public_space_value_120"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="待进行"
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_un_start"
                    android:src="@mipmap/iv_coupon_title2"
                    android:layout_width="@dimen/public_space_value_120"
                    android:layout_height="match_parent"
                    android:gravity="center" />


            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA"
            />
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_404"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_404"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>