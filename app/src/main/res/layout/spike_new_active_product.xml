<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="6dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:background="@drawable/shape_white1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_space_value_120"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:id="@+id/iv_bg"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.puyue.www.qiaoge.RoundImageView
                android:id="@+id/iv_item_spike_img"
                android:layout_width="@dimen/size_90dp"
                android:layout_height="@dimen/size_90dp"
                android:layout_marginLeft="@dimen/size_12dp"
                android:scaleType="fitXY"
               />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
             />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_send"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_not_send2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                />


        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_spike_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="逊谈起降价时逊谈起降"
                    android:textColor="@color/app_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_spike_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:text="规格"
                    android:textColor="#414141"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp">

                    <ImageView
                        android:id="@+id/iv_flag"
                        android:layout_width="32dp"
                        android:layout_height="12dp"
                        tools:src="@mipmap/icon_right" />

                    <TextView
                        android:id="@+id/tv_spread"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_3dp"
                        android:background="@drawable/shape_orange24"
                        android:paddingLeft="2dp"
                        android:paddingRight="@dimen/size_2dp"
                        android:textColor="#FF5C00"
                        android:textSize="8sp"
                        android:visibility="gone"
                        tools:text="省10" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line">

                <RelativeLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_spike_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F50404"
                        android:textSize="14sp"
                        tools:text="100" />

                    <TextView
                        android:id="@+id/tv_item_spike_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_item_spike_price"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_item_spike_price"
                        android:textColor="#979797"
                        android:textSize="8sp"
                        tools:text="200" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin">

                    <ProgressBar
                        android:id="@+id/pb_item_spike"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:progressDrawable="@drawable/layerlist_goods_progress" />

                    <TextView
                        android:id="@+id/tv_item_spike_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/pb_item_spike"
                        android:gravity="right"
                        android:text="@string/app_name"
                        android:textColor="#979797"
                        android:textSize="7sp" />

                    <TextView
                        android:id="@+id/addCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/app_home_more"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="立即加购"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_sold_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_grey"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="已售罄"
                        android:textColor="@color/white"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_add_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_jianbian10"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="立即加购"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl_price"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_26dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_orange_radius_11"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:text="获取授权"
                            android:textColor="#fff"
                            android:textSize="@dimen/size_12dp" />

                    </RelativeLayout>

                </RelativeLayout>




            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>