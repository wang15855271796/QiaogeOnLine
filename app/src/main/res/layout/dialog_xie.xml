<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:background="@drawable/shape_choose_address"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:text="费用协商说明"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="@dimen/size_22dp"
                    android:id="@+id/iv_close"
                    android:padding="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_order_cancel" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_marginTop="@dimen/size_28dp"
                android:layout_marginRight="@dimen/size_28dp"
                android:layout_marginLeft="@dimen/size_28dp"
                android:text="费用协商：发起协商后，账单费用将冻结，在发起协商后，账单费用将冻结，在协商中的费用无法发起支付；进入协商后，司机将主动联系用户进行费用沟通，用户也可以主动联系司机进行沟通；沟通成功后，司机按协商金额修改费用，可重新进行支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


</LinearLayout>