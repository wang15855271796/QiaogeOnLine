<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2">

    </LinearLayout>

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/search_btn_back"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_30dp">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_marginLeft="@dimen/size_18dp"
                android:layout_marginRight="@dimen/size_22dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_search"
            android:layout_marginRight="@dimen/size_54dp"
            android:layout_marginLeft="@dimen/size_54dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_33dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_white_surp"
            android:drawableLeft="@mipmap/ic_market_search"
            android:drawablePadding="@dimen/size_10dp"
            android:paddingLeft="12dp"
            android:text="搜索店内商品"
            android:textColor="#666666"
            android:textSize="@dimen/size_14dp" />

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_marginRight="@dimen/size_22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_tab_cart_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_car_num"
            android:gravity="center"
            tools:text="9"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="7dp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smart"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.header.MaterialHeader
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>


            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_no_data"
        android:visibility="gone"
        android:layout_marginTop="@dimen/public_space_value_120"
        android:layout_gravity="center"
        android:src="@mipmap/ic_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>