<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_orange9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.puyue.www.qiaoge.view.CompatToolbar
            android:id="@+id/compatToolbar"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:text="确认订单"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </com.puyue.www.qiaoge.view.CompatToolbar>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:background="@drawable/shape_white1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30dp">

                <TextView
                    android:id="@+id/tv_car"
                    android:textSize="@dimen/size_18dp"
                    android:textColor="#333333"
                    tools:text="小面"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_marginLeft="@dimen/size_63dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_90dp">

                <LinearLayout
                    android:id="@+id/ll_z"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp">

                    <TextView
                        android:id="@+id/tv_z"
                        tools:text="梦科创起梦科创梦科创起梦科创梦科创起梦科创梦科创起梦科创梦科创起梦科创梦科创起梦科创"
                        android:lines="2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/size_5dp"
                        android:drawableLeft="@mipmap/icon_zhuang"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/ll_z"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp">

                    <TextView
                        android:layout_below="@+id/tv_z"
                        android:id="@+id/tv_x"
                        tools:text="梦科创起梦科创梦科创起梦科创梦科创起梦科创梦科创起梦科创梦科创起梦科创"
                        android:lines="2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/size_5dp"
                        android:drawableLeft="@mipmap/icon_xie"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_mine_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:background="#F2F3F6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_space_value_0.5"/>

            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_use_car"
                    android:textColor="#333333"
                    android:text="现在用车"
                    android:drawablePadding="@dimen/size_5dp"
                    android:drawableRight="@mipmap/ic_mine_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/ll_user"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_contact"
                        tools:text="王涛"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_contact_phone"
                        android:layout_marginLeft="@dimen/size_15dp"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:layout_alignParentRight="true"
                        android:hint="下单联系人"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/size_3dp"
                        android:drawableRight="@mipmap/ic_mine_arrow"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:background="@drawable/shape_white1"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <RelativeLayout
                android:id="@+id/rl_beizhu"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333333"
                    android:text="订单备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_beizhu"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/size_90dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text="输入货物描述等"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/size_3dp"
                    android:drawableRight="@mipmap/ic_mine_arrow"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_other"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333333"
                    android:text="搬运及其他服务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_other"
                    android:textSize="@dimen/sp_12"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/size_100dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_alignParentRight="true"
                    tools:text="需要搬运、回单等需要搬运、回单等需要搬运、回单等需要搬运、回单等"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/size_3dp"
                    android:drawableRight="@mipmap/ic_mine_arrow"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:background="@drawable/shape_white1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100dp">

            <RelativeLayout
                android:id="@+id/rl_coupon"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#333333"
                    android:text="优惠券"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_coupon"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_alignParentRight="true"
                    android:text="暂无可用优惠券"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/size_3dp"
                    android:drawableRight="@mipmap/ic_mine_arrow"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/size_18dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:text="发票"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_receipt"
                    android:textColor="#666666"
                    android:background="@drawable/shape_grey8"
                    android:textSize="@dimen/sp_12"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingRight="@dimen/size_5dp"
                    android:paddingLeft="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/public_space_value_120"
                    android:layout_alignParentRight="true"
                    android:text="撮合-电子普票"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/ll_receipt"
                    android:orientation="vertical"
                    android:background="@drawable/shape_grey8"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/size_3dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_receipt1"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12"
                        android:text="承运-纸质专票"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_receipt2"
                        android:textColor="#666666"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/dp_10"
                        android:text="叫车后无法补开"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/size_15dp"
            android:textSize="12sp"
            android:textColor="#FD6601"
            android:text="*提示：发票请至货拉拉App下载（承运-纸质专票叫车后无法补开）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="169dp">

        <TextView
            android:id="@+id/tv_total"
            android:textColor="#333333"
            android:text="30"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_28dp"
            android:textSize="@dimen/size_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="元"
            android:textSize="@dimen/size_18dp"
            android:layout_alignBaseline="@+id/tv_total"
            android:layout_toRightOf="@+id/tv_total"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_pay"
            android:text="支付并叫车"
            android:layout_below="@+id/tv_total"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_orange2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/lav_loading"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallPulseIndicator"
        style="@style/AVLoadingIndicatorView.Large"
        app:indicatorColor="#f40"
        />

</RelativeLayout>