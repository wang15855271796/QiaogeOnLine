<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_time"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="136dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12dp"
            tools:src="@mipmap/icon_baidu" />

        <ImageView
            android:id="@+id/iv_send"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/size_17dp"
            android:src="@mipmap/icon_not_send2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="标题" />

        <RelativeLayout
            android:id="@+id/rl_coupon"
            android:background="@drawable/shape_ring"
            android:layout_width="40dp"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/size_70dp"
            android:layout_marginLeft="@dimen/size_70dp"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            >

            <TextView
                tools:text="30"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:id="@+id/tv_coupon"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="11sp"
            tools:text="规格" />

        <RelativeLayout
            android:layout_below="@+id/tv_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_coupon">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#FF703C"
                android:textSize="17sp"
                tools:text="100" />

            <TextView
                android:id="@+id/tv_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/tv_price"
                android:textSize="12sp"
                tools:text="100" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_flag"
                android:layout_width="32dp"
                android:layout_height="12dp"
                android:layout_below="@+id/tv_price"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_2dp"
                tools:src="@mipmap/icon_right" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_15dp">

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="7dp"
                    android:layout_centerVertical="true"
                    android:progressDrawable="@drawable/layerlist_goods_progress" />

                <TextView
                    android:id="@+id/tv_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/progress"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textColor="@color/color_9C9C9C"
                    android:textSize="@dimen/size_8dp" />


                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:background="@drawable/shape_detail_grey"
                    android:paddingLeft="5dp"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="@dimen/size_3dp"
                    android:text="  未开始  "
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="@dimen/size_70dp"
                    android:layout_height="@dimen/size_26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape_orange_radius_11"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/size_15dp"
                        android:text="获取授权"
                        android:textColor="#fff"
                        android:textSize="@dimen/size_12dp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>