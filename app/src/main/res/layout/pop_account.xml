<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white6">

    <FrameLayout
        android:id="@+id/fl_mark"
        android:clickable="true"
        android:visibility="gone"
        android:background="#11000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white6">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_select_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_select_two"
            android:layout_marginLeft="@dimen/size_21dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/size_21dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:background="@drawable/shape_jianbian5"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>



</RelativeLayout>