<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f7f8fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/shape_white4">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_18dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:padding="5dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="供应商入驻"
            android:textColor="#414141"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/shape_white1"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_step_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="证件类型"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--营业执照-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white1"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="3dp"
                    android:drawableLeft="@mipmap/ic_auth_card"
                    android:text="营业执照"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="3dp"
                    android:text="已完成"
                    android:textColor="#FF3D03"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_up_business"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_shop_camera"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="150dp"/>


        </LinearLayout>

        <!--许可证-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white1"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_auth"
                    android:drawablePadding="3dp"
                    android:text="食品经营许可证"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_allow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="3dp"
                    android:text="已完成"
                    android:textColor="#FF3D03"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_up_allow"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_shop_camera"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="150dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_white_reds"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="上一步"
                android:textColor="#FF4D29"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_jianbian5"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="下一步"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>