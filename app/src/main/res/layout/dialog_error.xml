<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="提示"
                android:textColor="#232131"
                android:textSize="18dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_login_password"
            android:layout_marginLeft="@dimen/size_36dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:layout_marginRight="@dimen/size_36dp"
            android:orientation="vertical"
            android:text="您的授权申请正在处理中，可联系"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_36dp"
            android:layout_marginTop="@dimen/size_26dp"
            android:layout_marginRight="@dimen/size_36dp"
            android:background="@drawable/shape_orange13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="客服热线"
            android:textColor="#FF5C00"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_jianbian"
            android:paddingTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:text=" 我知道了 "
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>