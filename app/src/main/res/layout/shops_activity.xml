<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2">

    </LinearLayout>

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginLeft="@dimen/size_18dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/iv_close_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_marginRight="@dimen/size_54dp"
            android:layout_marginLeft="@dimen/size_54dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_33dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_white_surp"
            android:drawableLeft="@mipmap/ic_market_search"
            android:drawablePadding="@dimen/size_10dp"
            android:paddingLeft="12dp"
            android:text="搜索店内商品"
            android:textColor="#666666"
            android:textSize="@dimen/size_14dp" />

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_marginRight="@dimen/size_22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_tab_cart_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_car_num"
            android:gravity="center"
            tools:text="9"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="7dp" />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_marginLeft="@dimen/size_13dp"
                    android:layout_marginTop="@dimen/sp_12"
                    android:textSize="@dimen/size_18dp"
                    android:textColor="#000000"
                    android:text="杭州卷福技术冻品批发有限公司"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_zizhi"
                        android:layout_marginLeft="@dimen/public_space_value_13"
                        android:src="@mipmap/icon_zizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="商品数量12"
                        android:textSize="@dimen/sp_12"
                        android:id="@+id/tv_goods_num"
                        android:layout_marginLeft="@dimen/size_24dp"
                        android:layout_toRightOf="@+id/iv_zizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="月销量15"
                        android:id="@+id/tv_sale"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="@dimen/size_24dp"
                        android:layout_toRightOf="@+id/tv_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_status"
                    android:textSize="12sp"
                    android:textColor="#414141"
                    android:background="@drawable/shape_grey9"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_below="@+id/recyclerView"
                    tools:text="12:00"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_14dp"
                    android:layout_marginLeft="@dimen/size_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>