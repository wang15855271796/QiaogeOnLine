<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_66dp">

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_13dp"
            android:src="@mipmap/iv_sc_un_choose" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_toRightOf="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浙江省杭州市余杭区地址详情"
                android:textColor="#414141" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="@dimen/size_8dp"
                android:text="姓名"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_toRightOf="@+id/tv_name"
                android:text="142458255"
                android:textColor="#B0B0B0" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_16dp"
            android:drawableLeft="@mipmap/iv_sc_edit"
            android:drawablePadding="@dimen/size_5dp"
            android:text="编辑"
            android:textColor="#39D11E" />
    </RelativeLayout>
</LinearLayout>