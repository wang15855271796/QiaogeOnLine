<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_jianbian4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_56dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back_arrow" />

        <LinearLayout
            android:layout_marginTop="@dimen/size_88dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_31dp"
                android:layout_marginRight="@dimen/size_38dp"
                android:text="您的手机号182 0347 1798现在能接收短信吗？"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:src="@mipmap/ic_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/size_38dp"
            android:layout_marginRight="@dimen/size_38dp"
            android:layout_marginTop="@dimen/size_45dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp">

            <TextView
                android:id="@+id/tv_no"
                android:text="不能"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:textColor="#ffffff"
                android:background="@drawable/shape_jianbian5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_yes"
                android:text="能"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/shape_jianbian5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>