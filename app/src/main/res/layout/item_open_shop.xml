<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_grey16"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="-10dp"
                    android:drawableBottom="@mipmap/ic_red_line"
                    android:src="@mipmap/ic_provider_title"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="成为供应商" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_grey17"
                android:padding="12dp"
                tools:text="面向全国招募冻品、蔬菜、干调品、酒水饮料、米面粮油等品类食材供应商，为广大餐饮商户提供食材供应"
                android:textColor="#414141"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_jianbian27"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="供应商入驻"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            tools:src="@mipmap/ic_shop_tip1" />

    </RelativeLayout>

</LinearLayout>