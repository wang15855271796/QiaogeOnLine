<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_margin="@dimen/size_52dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/size_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="温馨提示"
                android:textColor="#333333"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="@dimen/size_18dp"
                android:layout_height="@dimen/size_18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_20dp"
                android:src="@mipmap/ic_huo_close" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_30dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/size_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="当前订单有X件商品暂不支持自提，建议您使用订单配送服务。"
                android:textColor="#666666"
                android:textSize="@dimen/size_12dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/size_5dp"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingRight="@dimen/size_36dp"
                android:paddingLeft="@dimen/size_36dp"
                android:layout_marginRight="@dimen/size_36dp"
                android:layout_marginLeft="@dimen/size_36dp"
                android:background="@drawable/shape_orange13"
                tools:text="只结算可自提商品，支付4792.00元"
                android:textStyle="bold"
                android:textColor="#FF5C00"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_sure"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_jianbian"
                android:paddingTop="@dimen/size_5dp"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingRight="@dimen/size_36dp"
                android:paddingLeft="@dimen/size_36dp"
                android:layout_marginRight="@dimen/size_36dp"
                android:layout_marginLeft="@dimen/size_36dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44dp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/size_20dp"
                android:text="切换为“订单配送”"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>