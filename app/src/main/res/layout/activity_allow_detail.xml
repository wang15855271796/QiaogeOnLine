<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/shape_white4">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_18dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:padding="5dp"
            android:src="@mipmap/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="资质信息"
            android:textColor="#414141"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="3dp"
                    android:drawableLeft="@mipmap/ic_auth"
                    android:text="食品经营许可证"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.puyue.www.qiaoge.RoundImageView
                        android:id="@+id/iv_business"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_shop_camera" />

                    <TextView
                        android:id="@+id/tv_upload"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_grey18"
                        android:gravity="center"
                        android:text="重新上传"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_business"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_up_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:drawableTop="@mipmap/ic_shop_camera1"
                        android:drawablePadding="5dp"
                        android:text="上传图片" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_red15"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="需文字清晰无水印"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="20dp"
                    android:drawablePadding="3dp"
                    android:text="执照有效期"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_regular"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="3dp"
                        android:text="固定有效期"
                        android:background="@drawable/shape_grey3"
                        android:textColor="#414141"
                        android:textSize="13sp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_long_term"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="3dp"
                        android:text="长期有效"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_grey3"
                        android:textColor="#414141"
                        android:textSize="13sp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:drawablePadding="3dp"
                    android:text="有效日期"
                    android:textColor="#414141"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_valid_time"
                    tools:text="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#414141"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_grey4"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_jianbian5"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="确认图片与信息一致"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>